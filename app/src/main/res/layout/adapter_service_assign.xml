<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/service_adp2"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        android:visibility="visible">
<!--        app:cardUseCompatPadding="true"-->

        <LinearLayout
            android:id="@+id/llService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.8"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/service_adp1"
                android:orientation="vertical">

<!--                android:background="#F4A879"-->

                <TextView
                    android:id="@+id/tv_TktNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/btn_bgcolouryellow"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/circle_white">

                    <ImageView
                        android:id="@+id/im_Call_Preference"
                        android:fontFamily="@font/myfont"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:gravity="center" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tvCall_preference"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_TktDate"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_Customer"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_Branch"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_Mobile"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/mobile_svglist"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_Area"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_TimeDue"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/grey"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.5"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:fontFamily="@font/myfont"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/svg_view_eye"
                                android:padding="5dp"
                                android:gravity="center" />


                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">

                            <ImageView
                                android:fontFamily="@font/myfont"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/svg_edit_pencil"
                                android:padding="5dp"
                                android:gravity="center" />


                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@color/grey"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end|center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/myfont"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                    </LinearLayout>



                </LinearLayout>





            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>