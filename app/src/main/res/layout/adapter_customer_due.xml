<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@android:color/transparent"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llCustomerDue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

<!--        android:background="@drawable/shape_bg_gr"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Account Details"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_svg_fromtime"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_AccountDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />


                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Balance"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_Balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />


                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Due"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/svg_expense"
                        app:tint="@color/colorPrimary" />


                    <TextView
                        android:id="@+id/tv_Due"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="1dp"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="visible"/>


</androidx.cardview.widget.CardView>