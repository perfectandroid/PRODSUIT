<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:backgroundTint="@color/homebgcolor"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/white"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">


                <TextView
                    android:text="Lead No ( Date )"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:fontFamily="@font/myfont"

                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:singleLine="true"


                    android:textColor="@color/black1"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:fontFamily="@font/myfont"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/greydark"
                    android:textSize="12dp"

                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">


                <TextView
                    android:text="Customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:fontFamily="@font/myfont"

                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:singleLine="true"


                    android:textColor="@color/black1"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:fontFamily="@font/myfont"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/greydark"
                    android:textSize="12dp"

                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">


                <TextView
                    android:text="Category/Product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:fontFamily="@font/myfont"

                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:singleLine="true"


                    android:textColor="@color/black1"
                    android:textSize="12dp"
                    android:textStyle="bold"  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:fontFamily="@font/myfont"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/greydark"
                    android:textSize="12dp"

                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">


                <TextView
                    android:text="Collected By"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:fontFamily="@font/myfont"

                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:singleLine="true"


                    android:textColor="@color/black1"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:fontFamily="@font/myfont"
                    android:justificationMode="inter_word"
                    android:paddingLeft="2dp"
                    android:textColor="@color/greydark"
                    android:textSize="12dp"

                    android:textStyle="normal" />


            </LinearLayout>




        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="3dp"
            android:background="@color/grey" />


    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_followList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/lToDoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_leadNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorPrimarylite"
                android:orientation="vertical">





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtLead"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_status"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_bgcolouryellow"
                    android:textColor="@color/black"/>

                <!--                android:drawableLeft="@drawable/addressicon"-->
                <TextView
                    android:id="@+id/tv_date"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="12dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/calendar_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtCustomer"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/svg_action_type"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/product_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:visibility="visible"/>
                <!--                android:drawableLeft="@drawable/deadline"-->

                <TextView
                    android:id="@+id/txtCollectedBy"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="12dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/svg_action_type"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:visibility="visible"/>




            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">.


            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/report_list1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_SiNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/report_list2"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_LeadNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_LeadDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_Action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_ActionType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/report_list3"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_Branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/tv_Product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont"
                    android:visibility="visible"/>


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/report_list4"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_FollowUpMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont"
                    android:visibility="visible"/>



                <TextView
                    android:id="@+id/tv_CompleteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />


                <TextView
                    android:id="@+id/tv_AssignedTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />



            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/report_list5"
                android:layout_weight="1"
                android:paddingLeft="2dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_DueDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_Status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_Priority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/myfont"
                    android:visibility="visible"/>


            </LinearLayout>







        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>


    </LinearLayout>

</LinearLayout>


