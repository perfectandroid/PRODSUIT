<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="-20dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_main"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/top_rounded_white">




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@color/color_tab"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Filter"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:tint="@color/white"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:fontFamily="@font/myfont" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_service_list"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:visibility="visible">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Fromdate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="From Date"
                                android:layout_weight="1"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                app:startIconTint="@color/colorPrimary"
                                app:startIconDrawable="@drawable/icon_svg_fromdate"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Fromdate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Todate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="To Date"
                                android:layout_marginLeft="5dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:visibility="visible"
                                app:startIconDrawable="@drawable/icon_svg_todate"
                                app:startIconTint="@color/colorPrimary"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Todate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Selectarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Area"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/search"
                            app:startIconDrawable="@drawable/icon_svg_area"
                            app:startIconTint="@color/colorPrimary"
                            app:endIconTint="@color/colorPrimary"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Selectarea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:drawableRight="@drawable/search"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:focusableInTouchMode="false"
                                android:textSize="14dp"
                                android:editable="false"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:textStyle="normal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Selectemployee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Employee"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/search"
                            app:startIconDrawable="@drawable/icon_svg_attendedby"
                            app:startIconTint="@color/colorPrimary"
                            app:endIconTint="@color/colorPrimary"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Selectemployee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:textSize="14dp"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:textStyle="normal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Entercustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Customer"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:startIconDrawable="@drawable/icon_svg_customer"
                            app:startIconTint="@color/colorPrimary"
                            app:endIconDrawable="@drawable/arrow_down"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Entercustomer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:textSize="14dp"
                                android:editable="true"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:textStyle="normal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Customemobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Customer Mobile"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:startIconDrawable="@drawable/icon_svg_mobile"
                            app:startIconTint="@color/colorPrimary"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Customemobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:textSize="14dp"
                                android:editable="true"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:textStyle="normal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Selectproduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:endIconMode="custom"
                            app:endIconDrawable="@drawable/search"
                            app:startIconDrawable="@drawable/icon_svg_product"
                            app:startIconTint="@color/colorPrimary"
                            app:endIconTint="@color/colorPrimary"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Selectproduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:drawableRight="@drawable/search"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:textSize="14dp"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:textStyle="normal"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Selectstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Status"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:startIconDrawable="@drawable/icon_svg_status"
                            app:startIconTint="@color/colorPrimary"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Selectstatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/arrow_down"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:editable="true"
                                android:fontFamily="@font/myfont"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="@color/grey"
                                android:textSize="14dp"
                                android:textStyle="normal" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Ticketumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ticket Number"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:startIconDrawable="@drawable/icon_svg_ticketno"
                            app:startIconTint="@color/colorPrimary"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Ticketumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/textColor"
                                android:textSize="14dp"
                                android:editable="true"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:textStyle="normal"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            android:textSize="12dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold|italic"
                            android:fontFamily="@font/myfont"
                            android:text="* You can change date, time &amp; description as your wish."
                            android:textColor="@color/redDark"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtCancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/greydark"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/btn_shape_reset"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textAllCaps="false"
                            android:text="RESET" />


                        <TextView
                            android:id="@+id/txtSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/btn_shape_submit"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textAllCaps="false"
                            android:text="SEARCH" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/ll_cancel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:gravity="center">
                                <Button
                                    android:id="@+id/btncancel"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:textSize="15dp"
                                    android:textAllCaps="false"
                                    android:fontFamily="@font/myfont"
                                    android:background="@drawable/btn_resetbg"
                                    android:text="Cancel" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_ok"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_margin="5dp"
                                android:layout_weight="0.5"
                                android:gravity="center">
                                <Button
                                    android:id="@+id/btnsubmit"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/myfont"
                                    android:background="@drawable/btn_bgcolour"
                                    android:textAllCaps="false"
                                    android:text="Submit" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>





