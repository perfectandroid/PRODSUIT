<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imback"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:background="@color/color_activity_transparent"
                            android:padding="10dp"
                            android:tint="@color/black"
                            android:src="@drawable/back_arro"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Customer service"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:tint="@color/black"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:fontFamily="@font/myfont" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imLeadedit"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:background="@color/color_activity_transparent"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"
                            android:visibility="invisible"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_above="@+id/llBtn"
                        android:background="@color/color_background1">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/white"
                                    app:cardCornerRadius="3dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:background="#FFFFFF">
<!--                                        android:background="#FBEEF0"-->

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="customer details"
                                            android:textColor="@color/white"
                                            android:gravity="center"
                                            android:textAllCaps="true"
                                            android:textStyle="bold"
                                            android:textSize="15dp"
                                            android:padding="10dp"
                                            android:background="@drawable/shape_gradient_pop"
                                            android:fontFamily="@font/myfont"/>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_CustomerNo"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Customer Number"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            app:endIconMode="custom"
                                            app:endIconDrawable="@drawable/search_24"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_CustomerNo"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableLeft="@drawable/svg_report"
                                                android:backgroundTint="@color/greydark"
                                                android:textSize="14dp"
                                                android:editable="true"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_CustomerName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Customer Name"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            app:endIconMode="custom"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_CustomerName"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableLeft="@drawable/svg_report"
                                                android:backgroundTint="@color/greydark"
                                                android:textSize="14dp"
                                                android:editable="true"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_MobileNumber"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Mobile Number"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            app:endIconMode="custom"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_MobileNumber"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableLeft="@drawable/svg_report"
                                                android:backgroundTint="@color/greydark"
                                                android:textSize="14dp"
                                                android:editable="true"
                                                android:inputType="phone"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_Address"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Address"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            app:endIconMode="custom"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_Address"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableLeft="@drawable/svg_report"
                                                android:backgroundTint="@color/greydark"
                                                android:textSize="14dp"
                                                android:editable="true"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_Priority"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Priority"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            app:endIconMode="custom"
                                            app:endIconDrawable="@drawable/arrow_down"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_Priority"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableLeft="@drawable/svg_report"
                                                android:backgroundTint="@color/greydark"
                                                android:textSize="14dp"
                                                android:editable="false"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_Channel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:hint="Channel"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginRight="15dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            app:endIconMode="custom"
                                            app:endIconDrawable="@drawable/arrow_down"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_Channel"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableLeft="@drawable/svg_report"
                                                android:backgroundTint="@color/greydark"
                                                android:textSize="14dp"
                                                android:editable="false"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:backgroundTint="@color/white"
                                    app:cardCornerRadius="3dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    app:cardElevation="5dp"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">


                                        <com.google.android.material.tabs.TabLayout
                                            android:id="@+id/tabLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/tab_color_selector"
                                            android:scrollbars="horizontal"
                                            app:tabTextColor="@color/white"
                                            app:tabIndicatorColor="@color/tab_background_selected"
                                            app:tabTextAppearance="@style/customfontstyle1"
                                            app:tabBackground="@drawable/tab_color_selector"/>

                                        <LinearLayout
                                            android:id="@+id/llMainDetail"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            tools:ignore="MissingConstraints" >


                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>


                        </ScrollView>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/color_background"
                        android:layout_alignParentBottom="true">


                        <Button
                            android:id="@+id/btnReset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/btn_shape_reset"
                            android:fontFamily="@font/myfont"
                            android:padding="2dp"
                            android:text="Reset"
                            android:textStyle="bold"
                            android:textColor="@color/greydark"
                            android:textAllCaps="true"
                            android:textSize="15dp"
                            android:visibility="visible"/>

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/btn_shape_submit"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:text="Submit"
                            android:visibility="visible"/>
                        <!--            android:background="@drawable/btn_bgcolourshadow1"-->

                        <!--            btn_bgcolourblack-->
                    </LinearLayout>


                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


