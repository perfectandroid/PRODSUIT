                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Employee"
                                                    android:drawableLeft="@drawable/vtr_employee"
                                                    android:drawablePadding="5dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/textColor"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tvc_temployee"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Employee"
                                                    android:layout_marginTop="-3dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/black"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>







                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="0dp"
                                            android:layout_marginTop="10dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center_vertical"
                                                android:text="Details"
                                                android:background="@drawable/shape_gradient2"
                                                android:padding="0dp"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="17dp"
                                                android:textStyle="bold"
                                                android:layout_weight="1"
                                                android:textAllCaps="true"
                                                android:fontFamily="@font/myfont"
                                                android:visibility="gone"/>



                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:padding="1dp"
                                                android:background="@drawable/shape_bg"
                                                android:visibility="visible">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_margin="1dp"
                                                    android:background="@drawable/shape_gradient2"
                                                    android:orientation="horizontal">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_weight="1"
                                                        android:orientation="horizontal">

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:padding="2dp"
                                                            android:orientation="vertical">

                                                            <TextView
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:layout_weight="1.3"
                                                                android:padding="2dp"
                                                                android:fontFamily="@font/myfont"
                                                                android:textColor="@color/black"
                                                                android:textStyle="bold"
                                                                android:textSize="13dp"
                                                                android:text="Stock Mode"
                                                                android:visibility="visible"/>




                                                            <TextView
                                                                android:id="@+id/tv_employee"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:padding="2dp"
                                                                android:layout_marginTop="-5dp"
                                                                android:fontFamily="@font/myfont"
                                                                android:textColor="@color/black"
                                                                android:textStyle="bold"
                                                                android:textSize="13dp"
                                                                android:text="Product"
                                                                android:visibility="visible"/>


                                                        </LinearLayout>

                                                    </LinearLayout>

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_weight="1.7"
                                                        android:padding="2dp"
                                                        android:orientation="vertical">

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1.3"
                                                            android:padding="2dp"
                                                            android:gravity="center"
                                                            android:fontFamily="@font/myfont"
                                                            android:textColor="@color/black"
                                                            android:textStyle="bold"
                                                            android:textSize="13dp"
                                                            android:text="Quantity /Stand Qty"
                                                            android:visibility="visible"/>




                                                    </LinearLayout>



                                                </LinearLayout>


                                                <com.perfect.prodsuit.Helper.FullLenghRecyclertview
                                                    android:id="@+id/recyConfirmStock"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:visibility="visible" />

                                            </LinearLayout>



                                        </LinearLayout>



                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>



                        </LinearLayout>


                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llConfirmBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/color_background"
                    android:layout_alignParentBottom="true">



                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/btn_shape_reset"
                        android:fontFamily="@font/myfont"
                        android:padding="2dp"
                        android:text="Cancel"
                        android:textStyle="bold"
                        android:textColor="@color/greydark"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:visibility="visible"/>

                    <Button
                        android:id="@+id/btnOk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/myfont"
                        android:background="@drawable/btn_shape_submit"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:text="OK"
                        android:visibility="visible"/>

                </LinearLayout>


            </RelativeLayout>












            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyServiceWarranty1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyServiceProductHistory1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyServiceSalesHistory1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

