                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Employee"
                                                    android:drawableLeft="@drawable/vtr_employee"
                                                    android:drawablePadding="5dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/textColor"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tvc_femployee"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Employee"
                                                    android:layout_marginTop="-3dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/black"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>







                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="1dp"
                                            android:layout_marginTop="10dp"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="center_vertical"
                                                android:text="To"
                                                android:background="@drawable/shape_gradient2"
                                                android:padding="0dp"
                                                android:textColor="@color/colorPrimaryDark"
                                                android:textSize="17dp"
                                                android:textStyle="bold"
                                                android:layout_weight="1"
                                                android:textAllCaps="true"
                                                android:fontFamily="@font/myfont" />


                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5dp"
                                                android:layout_marginLeft="5dp"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Branch"
                                                    android:drawableLeft="@drawable/vtr_branch"
                                                    android:drawablePadding="5dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/textColor"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tvc_tbranch"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Branch"
                                                    android:layout_marginTop="-3dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/black"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:text="Department"
                                                    android:drawableLeft="@drawable/vtr_department"
                                                    android:drawablePadding="5dp"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/textColor"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tvc_tdepartment"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:layout_marginTop="-3dp"
                                                    android:text="Department"
                                                    android:textAllCaps="false"
                                                    android:textColor="@color/black"
                                                    android:textSize="13dp"
                                                    android:textStyle="bold" />

                                            </LinearLayout>

                                            <LinearLayout
