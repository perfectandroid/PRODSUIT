<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/lin_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".75"
                    android:background="@color/todolist_Color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgPriority"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="1dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        app:tint="@color/red_light"
                        android:src="@drawable/rounded_profile_bg" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:text="STATUS"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgStatus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:src="@drawable/ic_baseline_rotate_right_24"
                        app:tint="@color/leadstages_color9" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:text="DUE DAY"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_dueDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/round_rect"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="3dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/tv_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="10dp"
                        android:drawableTint="@color/white"
                        android:fontFamily="@font/myfont"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawableLeft="@drawable/ic_ticket_details"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:textAllCaps="true"
                        android:textColor="@color/greydark"
                        android:textSize="12dp" />

                    <!--                android:drawableLeft="@drawable/addressicon"-->

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawableLeft="@drawable/mobile_svglist"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:textAllCaps="true"
                        android:textColor="@color/greydark"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:text="Ticket Date"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_ticketDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="-5dp"
                        android:drawableLeft="@drawable/calendar_svglist"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:text="Assigned Date"
                        android:textColor="@color/colorPrimary"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_assignedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="-5dp"
                        android:drawableLeft="@drawable/from_date_svg"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/grey_dark"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:background="@color/right_Color"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/phonecallicon" />

                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:src="@drawable/location" />

                    <ImageView
                        android:id="@+id/img_info"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:padding="3dp"
                        android:src="@drawable/info" />

                    <LinearLayout
                        android:id="@+id/lin_time"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                    <ImageView
                        android:id="@+id/img_running"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:src="@drawable/clock" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>