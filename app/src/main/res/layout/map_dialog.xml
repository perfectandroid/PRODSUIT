<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="0dp">

    <!-- Place your content inside the CardView -->
    <!-- For example, you can use a LinearLayout or any other layout as the container for your content -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_alignParentStart="true"
            android:padding="16dp">




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VYSHAKH "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Engineer"
                    android:textSize="14sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:padding="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/svg_fd_time"
                        android:fontFamily="@font/myfont"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:visibility="visible"/>



                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="13dp"
                        android:layout_marginTop="-3dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/myfont"
                        android:text="15-06-2023"
                        android:textColor="@color/black" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/boxStrokeColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/svg_fd_time"
                        android:fontFamily="@font/myfont"
                        android:text="Time"
                        android:textColor="@color/black"
                        android:visibility="visible"/>



                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="13dp"
                        android:layout_marginTop="-3dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/myfont"
                        android:text="12:31:00"
                        android:textColor="@color/black" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/boxStrokeColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="14dp"
                        android:drawableLeft="@drawable/svg_walk_assigned"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:visibility="visible"/>


                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="13dp"
                        android:layout_marginTop="-3dp"
                        android:textStyle="normal"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textColor="@color/black" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/boxStrokeColor"/>

            </LinearLayout>


            <!-- You can add more views here as needed -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_profile_bg"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />


        </LinearLayout>




        <!-- Add your views, text, images, etc., inside the LinearLayout or other container layout -->


    </RelativeLayout>

</androidx.cardview.widget.CardView>
