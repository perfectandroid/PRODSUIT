<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:backgroundTint="#ECEFEF"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">
    <!--    app:cardUseCompatPadding="true"-->
    <!--    android:backgroundTint="@color/white"-->



    <LinearLayout
        android:id="@+id/llEmiList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:padding="2dp"
                            android:src="@drawable/icon_svg_mobile"
                            app:tint="@color/colorPrimary"
                            android:visibility="gone"/>
                        <!--                            app:tint="@color/list_icon"-->

                        <TextView
                            android:id="@+id/adp_lead_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="17dp"
                            android:fontFamily="@font/myfont"
                            android:text="Lead No : 1235648"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_centerVertical="true" />
                    </LinearLayout>






                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:fontFamily="@font/myfont"
                        android:text="Customer"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/adp_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/myfont"
                        android:text="Ranjith"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#CCD8D8"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:fontFamily="@font/myfont"
                        android:text="Mobile"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/adp_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/myfont"
                        android:text="9847112345"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#CCD8D8"
                        android:visibility="gone"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:fontFamily="@font/myfont"
                        android:text="Action"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/adp_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/myfont"
                        android:text="Negotiation"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#CCD8D8"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:fontFamily="@font/myfont"
                        android:text="Assigned To"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/adp_assignedto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/myfont"
                        android:text="Chandrasekaran"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:background="#CCD8D8"
                        android:visibility="gone"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:fontFamily="@font/myfont"
                        android:text="FollowUp Date"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:id="@+id/adp_followupdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="13dp"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/myfont"
                        android:text="12/09/2023"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/adp_imgEdit"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="5dp"
                        android:padding="2dp"
                        android:src="@drawable/svg_ic_edit"
                        android:visibility="visible"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>



            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>


</androidx.cardview.widget.CardView>