<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navbg"
    tools:context=".View.Activity.InventoryGraphActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/llback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imback"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:src="@drawable/back_arro"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint" />

            </LinearLayout>


            <TextView
                android:id="@+id/mainHeadingDash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:text="Dashboard"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:tint="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical">


                <!--All tab here-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">



                        <LinearLayout
                            android:id="@+id/ll_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvv_dash"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:text="Chart"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/btn_dash"
                                android:textStyle="bold"
                                android:textSize="@dimen/header_text1"
                                android:textAllCaps="true"
                                android:visibility="visible"/>

                            <View
                                android:id="@+id/vw_previous"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/white"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/tvv_tile"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/btn_shape_reset"
                                android:layout_weight="1"
                                android:text="Tile"
                                android:textColor="@color/colorPrimary"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/myfont"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:textSize="@dimen/header_text1" />

                        </LinearLayout>

                        <!--Graph-->
                        <LinearLayout
                            android:id="@+id/ll_Graph"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_followup"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3dp"
                                app:cardBackgroundColor="@color/white"
                                android:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <AutoCompleteTextView
                                            android:id="@+id/actv_mode"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="20dp"
                                            android:layout_marginLeft="13dp"
                                            android:layout_marginRight="13dp"
                                            android:fontFamily="@font/myfont"
                                            android:padding="10dp"
                                            android:textSize="16sp"
                                            android:hint="Please Select"
                                            android:drawablePadding="5dp"
                                            android:drawableStart="@drawable/dash_icon"
                                            android:focusableInTouchMode="false"
                                            android:drawableEnd="@drawable/down_arrows"
                                            android:text=""
                                            android:background="@drawable/bg_dash2"
                                            android:layout_gravity="center"/>
                                    </LinearLayout>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        app:cardBackgroundColor="@color/white"
                                        app:cardPreventCornerOverlap="true"
                                        app:cardUseCompatPadding="true"
                                        app:cardElevation="3dp"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">

                                            <!--Cash Balance -->
                                            <LinearLayout
                                                android:id="@+id/ll_CashBalance"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/white"
                                                android:orientation="vertical"
                                                android:visibility="gone">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical"
                                                    android:background="#E6F1F2">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="horizontal">

                                                        <TextView
                                                            android:id="@+id/tvv_head_CashBalance"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:text=""
                                                            android:textColor="@color/colorPrimary"
                                                            android:gravity="start"
                                                            android:paddingLeft="5dp"
                                                            android:paddingTop="5dp"
                                                            android:layout_gravity="center"
                                                            android:fontFamily="@font/myfont"
                                                            android:textStyle="bold"
                                                            android:textAllCaps="false"
                                                            android:textSize="16dp"
                                                            android:visibility="visible"/>


                                                    </LinearLayout>



                                                    <TextView
                                                        android:id="@+id/tv_CashBalanceRemark"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center_vertical"
                                                        android:paddingLeft="5dp"
                                                        android:layout_marginTop="-7dp"
                                                        android:fontFamily="@font/myfont"
                                                        android:gravity="center_vertical"
                                                        android:text="df"
                                                        android:textAllCaps="false"
                                                        android:textColor="@color/colorPrimary"
                                                        android:textSize="13dp"
                                                        android:textStyle="normal"
                                                        android:tint="@color/black" />


                                                </LinearLayout>

                                                <LinearLayout

                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_margin="5dp"
                                                    android:orientation="vertical">
                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:padding="10dp"
                                                        android:layout_marginLeft="5dp"
                                                        android:layout_marginRight="5dp"
                                                        android:background="@color/colorPrimary"
                                                        android:orientation="horizontal">

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:text="Branch"
                                                            android:fontFamily="@font/myfont"
                                                            android:textSize="17dp"
                                                            android:textStyle="bold"
                                                            android:textColor="@color/white"/>

                                                        <TextView
                                                            android:id="@+id/tv_value"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="2.5"
                                                            android:gravity="end"
                                                            android:text="Balance"
                                                            android:fontFamily="@font/myfont"
                                                            android:textSize="17dp"
                                                            android:textStyle="bold"
                                                            android:textColor="@color/white"/>

                                                    </LinearLayout>
                                                    <androidx.recyclerview.widget.RecyclerView
                                                        android:id="@+id/recycCashBalance"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="5dp"
                                                        android:layout_marginRight="5dp">

                                                    </androidx.recyclerview.widget.RecyclerView>
                                                </LinearLayout>

                                            </LinearLayout>

                                            <!--Bank Balance -->
                                            <LinearLayout
                                                android:id="@+id/ll_BankBalance"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/white"
                                                android:orientation="vertical"
                                                android:visibility="gone">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical"
                                                    android:background="#E6F1F2">

                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:orientation="horizontal">

                                                        <TextView
                                                            android:id="@+id/tvv_head_BankBalance"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:text=""
                                                            android:textColor="@color/colorPrimary"
                                                            android:gravity="start"
                                                            android:paddingLeft="5dp"
                                                            android:paddingTop="5dp"
                                                            android:layout_gravity="center"
                                                            android:fontFamily="@font/myfont"
                                                            android:textStyle="bold"
                                                            android:textAllCaps="false"
                                                            android:textSize="16dp"
                                                            android:visibility="visible"/>


                                                    </LinearLayout>



                                                    <TextView
                                                        android:id="@+id/tv_BankBalanceRemark"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="center_vertical"
                                                        android:paddingLeft="5dp"
                                                        android:layout_marginTop="-7dp"
                                                        android:fontFamily="@font/myfont"
                                                        android:gravity="center_vertical"
                                                        android:text="df"
                                                        android:textAllCaps="false"
                                                        android:textColor="@color/colorPrimary"
                                                        android:textSize="13dp"
                                                        android:textStyle="normal"
                                                        android:tint="@color/black" />


                                                </LinearLayout>

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_margin="5dp"
                                                    android:orientation="vertical">
                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:padding="10dp"
                                                        android:layout_marginLeft="5dp"
                                                        android:layout_marginRight="5dp"
                                                        android:background="@color/colorPrimary"
                                                        android:orientation="horizontal">

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="1"
                                                            android:text="Bank Account"
                                                            android:fontFamily="@font/myfont"
                                                            android:textSize="17dp"
                                                            android:textStyle="bold"
                                                            android:textColor="@color/white"/>

                                                        <TextView
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_weight="2.5"
                                                            android:gravity="end"
                                                            android:text="Balance"
                                                            android:fontFamily="@font/myfont"
                                                            android:textSize="17dp"
                                                            android:textStyle="bold"
                                                            android:textColor="@color/white"/>

                                                    </LinearLayout>
                                                    <androidx.recyclerview.widget.RecyclerView
                                                        android:id="@+id/recycBankBalance"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_marginLeft="5dp"
                                                        android:layout_marginRight="5dp">

                                                    </androidx.recyclerview.widget.RecyclerView>
                                                </LinearLayout>

                                            </LinearLayout>

                                            <ScrollView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fillViewport="true">

                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:orientation="vertical">

                                                    <!--Expense Chart -->
                                                    <LinearLayout
                                                        android:id="@+id/ll_ExpenseChart"
                                                        android:layout_marginTop="10dp"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:background="@color/white"
                                                        android:orientation="vertical"
                                                        android:visibility="visible">

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:orientation="vertical"
                                                            android:background="#E6F1F2">

                                                            <LinearLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:orientation="horizontal">

                                                                <TextView
                                                                    android:id="@+id/tvv_head_Expense"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_weight="1"
                                                                    android:text=""
                                                                    android:textColor="@color/colorPrimary"
                                                                    android:gravity="start"
                                                                    android:paddingLeft="5dp"
                                                                    android:paddingTop="5dp"
                                                                    android:layout_gravity="center"
                                                                    android:fontFamily="@font/myfont"
                                                                    android:textStyle="bold"
                                                                    android:textAllCaps="false"
                                                                    android:textSize="16dp"
                                                                    android:visibility="visible"/>


                                                            </LinearLayout>



                                                            <TextView
                                                                android:id="@+id/tv_ExpenseRemark"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:layout_gravity="center_vertical"
                                                                android:paddingLeft="5dp"
                                                                android:layout_marginTop="-7dp"
                                                                android:fontFamily="@font/myfont"
                                                                android:gravity="center_vertical"
                                                                android:text=""
                                                                android:textAllCaps="false"
                                                                android:textColor="@color/colorPrimary"
                                                                android:textSize="13dp"
                                                                android:textStyle="normal"
                                                                android:tint="@color/black" />


                                                        </LinearLayout>

                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="match_parent"
                                                            android:orientation="vertical">

                                                            <com.github.mikephil.charting.charts.BarChart
                                                                android:id="@+id/ExpenseChart"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="400dp"
                                                                android:layout_marginLeft="10dp"
                                                                android:layout_marginRight="10dp"
                                                                android:visibility="gone" />

                                                            <TextView
                                                                android:id="@+id/tv_ExpenseChart"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="wrap_content"
                                                                android:layout_gravity="center_vertical"
                                                                android:layout_marginLeft="10dp"
                                                                android:layout_marginTop="10dp"
                                                                android:layout_marginRight="10dp"
                                                                android:fontFamily="@font/myfont"
                                                                android:gravity="center_vertical"
                                                                android:text=""
                                                                android:textAllCaps="false"
                                                                android:textColor="@color/black"
                                                                android:textSize="14dp"
                                                                android:textStyle="bold"
                                                                android:tint="@color/black" />

                                                            <LinearLayout
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent"
                                                                android:layout_margin="5dp">
                                                                <com.perfect.prodsuit.Helper.FullLenghRecyclertview
                                                                    android:id="@+id/recycExpense"
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_marginLeft="5dp"
                                                                    android:layout_marginRight="5dp"
                                                                    android:background="@drawable/svg_dashrect">

                                                                </com.perfect.prodsuit.Helper.FullLenghRecyclertview>
                                                            </LinearLayout>

                                                        </LinearLayout>

                                                    </LinearLayout>


                                                </LinearLayout>

                                            </ScrollView>

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>



                                </LinearLayout>



                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <!--Tile-->
                        <LinearLayout
                            android:id="@+id/ll_Tile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <LinearLayout
                                                android:id="@+id/ll_crmtile_outstanding"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <androidx.cardview.widget.CardView
                                                    android:gravity="center"
                                                    android:layout_gravity="center"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="5dp"
                                                    android:layout_marginRight="5dp"
                                                    android:layout_marginBottom="5dp"
                                                    android:layout_marginTop="10dp"
                                                    android:background="@color/white"
                                                    app:cardCornerRadius="5dp"
                                                    app:cardElevation="1dp"
                                                    app:cardPreventCornerOverlap="true"
                                                    app:cardUseCompatPadding="true">
                                                    <LinearLayout
                                                        android:orientation="vertical"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content">
                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content">
                                                            <TextView
                                                                android:id="@+id/tv_acc_tileName"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="50dp"
                                                                android:layout_weight="1"
                                                                android:text=""
                                                                android:textColor="@color/white"
                                                                android:gravity="left|center"
                                                                android:paddingLeft="15dp"
                                                                android:layout_gravity="center"
                                                                android:fontFamily="@font/myfont"
                                                                android:background="@color/colorPrimary"
                                                                android:textStyle="bold"
                                                                android:textSize="@dimen/header_text1"
                                                                android:visibility="visible"/>

                                                        </LinearLayout>
                                                        <LinearLayout
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:background="#ffffff"
                                                            android:layout_weight="1"
                                                            android:gravity="left"
                                                            android:layout_gravity="center"
                                                            tools:ignore="Orientation">

                                                            <androidx.recyclerview.widget.RecyclerView
                                                                android:id="@+id/recyc_accountsTile"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:layout_gravity="center"
                                                                android:paddingTop="10dp"
                                                                android:paddingBottom="10dp"
                                                                android:layout_margin="0dp"
                                                                android:gravity="center"
                                                                android:visibility="visible" />


                                                        </LinearLayout>

                                                    </LinearLayout>


                                                </androidx.cardview.widget.CardView>


                                            </LinearLayout>



                                        </LinearLayout>

                                    </LinearLayout>




                                </ScrollView>









                            </LinearLayout>

                        </LinearLayout>




                    </LinearLayout>






                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


