<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    app:cardElevation="15dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tool_green"
                android:layout_gravity="center"
                app:buttonTint="@color/white"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/tv_followupticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="service"
                android:layout_weight="1"
                android:fontFamily="@font/myfont"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/header_text1"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/plus_solid"
                android:layout_gravity="end"
                app:buttonTint="@color/white"
                android:layout_weight="4"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/ll_serviceDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="15dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:paddingLeft="2dp"
                            android:fontFamily="@font/myfont"
                            android:text="Item Name"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true" />

                        <CheckBox
                            android:id="@+id/chk_box"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="end"
                            app:buttonTint="@color/colorPrimary"
                            android:layout_weight="4"
                            android:visibility="visible"/>



                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight=".7"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:visibility="gone"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:layout_gravity="center"
                                    android:text="Service Type"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_serviceType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:paddingLeft="2dp"
                                android:drawableEnd="@drawable/down_arrows"
                                android:paddingRight="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />


                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:text="Service Cost"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>


                            <EditText
                                android:id="@+id/edt_serviceCost"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:padding="5dp"
                                android:paddingRight="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"/>



                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:layout_gravity="center"
                                    android:text="Tax Amount"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_taxAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />


                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:text="Net Amount"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tv_netAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:padding="5dp"
                                android:paddingRight="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"/>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="1dp"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>


                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/myfont"
                        android:background="@drawable/border_shadow_service"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>


</androidx.cardview.widget.CardView>