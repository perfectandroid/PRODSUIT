<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/border_4"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_main_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/phone_green"
                android:layout_gravity="center"
                app:buttonTint="@color/white"
                android:layout_weight="4"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_mainProdname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:fontFamily="@font/myfont"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text"
                android:textStyle="bold" />




            <ImageView
                android:id="@+id/imv_addProduct"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/myfont"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text"
                android:src="@drawable/svg_add_square"
                android:textStyle="bold"
                app:tint="@color/white"/>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/ll_serviceDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/productfollowup"
                        app:tint="@color/colorPrimary"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvv_component"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:fontFamily="@font/myfont"
                            android:text="Main Product"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/tvv_mainProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/myfont"
                            android:text=""
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/check_partsreplaced"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/productfollowup"
                        app:tint="@color/colorPrimary" />


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/color_background1"
                        android:visibility="gone"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:layout_gravity="center"
                                    android:text="Component"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />


                            </LinearLayout>


                            <TextView
                                android:id="@+id/tie_item_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />


                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="2dp"
                                    android:text="Warranty Mode"
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tvv_warrantyMode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:drawableEnd="@drawable/down_arrows"
                                android:paddingLeft="2dp"
                                android:padding="5dp"
                                android:paddingRight="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"/>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="1dp"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="14dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:layout_gravity="center"
                                    android:text="Quantity"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:paddingLeft="2dp"
                                android:paddingRight="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:inputType="number"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />


                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="14dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="2dp"
                                    android:fontFamily="@font/myfont"
                                    android:text="Replace Mode"
                                    android:textStyle="normal"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/tvv_replacedMode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:padding="5dp"
                                android:drawableEnd="@drawable/down_arrows"
                                android:paddingRight="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/border_shadow_service"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"/>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="1dp"
                                android:background="@color/color_background1"
                                android:visibility="gone"/>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>


</androidx.cardview.widget.CardView>