<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.WalkingCustomerActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imback"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:src="@drawable/back_arro"
                    tools:ignore="UseAppTint" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Walking Customer"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/white"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/myfont" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imLeadedit"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@color/color_activity_transparent"
                    android:padding="5dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_edit"
                    android:visibility="invisible"
                    tools:ignore="UseAppTint" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/llBtn"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/llBtn"
                    android:fillViewport="true"
                    android:layout_alignParentStart="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="1dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/llMainDetail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="visible"
                            tools:ignore="MissingConstraints">


                            <ImageView
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/svg_walking_customer" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_CustomerName"
                                style="@style/Widget.App.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:hint="Customer Name *">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_CustomerName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_walk_customer"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="true"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:maxLength="25"
                                    android:singleLine="true"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Phone"
                                style="@style/Widget.App.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:hint="Phone">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_walk_phone"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="true"
                                    android:nextFocusForward="@id/tie_AssignedTo"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:maxLength="15"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_AssignedTo"
                                style="@style/Widget.App.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:hint="Assigned To *">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_AssignedTo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_walk_assigned"
                                    android:drawableRight="@drawable/arrow_down"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:nextFocusForward="@id/tie_AssignedDate"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_AssignedDate"
                                style="@style/Widget.App.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:hint="Assigned Date *">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_AssignedDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_walk_date"
                                    android:drawableRight="@drawable/arrow_down"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:nextFocusForward="@id/tie_Description"
                                    android:focusableInTouchMode="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Description"
                                style="@style/Widget.App.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="25dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:hint="Description">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_walk_desc"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="true"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:justificationMode="inter_word"
                                    android:maxLength="250"
                                    android:maxLines="4"
                                    android:nextFocusForward="@id/btnSubmit"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color_background"
                android:layout_alignParentBottom="true">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_shape_reset"
                    android:fontFamily="@font/myfont"
                    android:padding="10dp"
                    android:text="Reset"
                    android:textStyle="bold"
                    android:textColor="@color/greydark"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_shape_submit"
                    android:fontFamily="@font/myfont"
                    android:padding="10dp"
                    android:text="SUBMIT"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:visibility="gone"/>
                <!--            android:background="@color/white"-->

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/btn_shape_reset"
                    android:fontFamily="@font/myfont"
                    android:padding="2dp"
                    android:text="Reset"
                    android:textStyle="bold"
                    android:textColor="@color/greydark"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:visibility="visible"/>
                <!--            android:background="@drawable/btn_bgcolourshad"-->
                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/myfont"
                    android:background="@drawable/btn_shape_submit"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:text="Submit"
                    android:visibility="visible"/>
                <!--            android:background="@drawable/btn_bgcolourshadow1"-->

                <!--            btn_bgcolourblack-->
            </LinearLayout>
        </RelativeLayout>







    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>