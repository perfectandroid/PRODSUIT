<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gradient3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/myfont"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="11dp"
                            android:text=""
                            android:visibility="visible"/>


                        <TextView
                            android:id="@+id/tv_qty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="1dp"
                            android:layout_weight="1.9"
                            android:gravity="center"
                            android:fontFamily="@font/myfont"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            android:text=""
                            android:visibility="visible"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:padding="1dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/myfont"
                        android:textColor="@color/black"
                        android:textSize="11dp"
                        android:text=""
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_stndqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:padding="1dp"
                        android:gravity="center"
                        android:fontFamily="@font/myfont"
                        android:textColor="@color/grey_dark"
                        android:textSize="11dp"
                        android:text=""
                        android:visibility="gone"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1.7"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/shape_bottom_rounded1"
                        android:src="@android:drawable/ic_menu_edit"/>

                    <ImageView
                        android:id="@+id/im_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:layout_marginLeft="4dp"
                        android:src="@android:drawable/ic_delete"
                        android:background="@drawable/shape_bottom_rounded1"/>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/grey"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:background="@drawable/shape_bg"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_stock1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/myfont"
                android:textColor="@color/grey_dark"
                android:singleLine="true"
                android:textSize="11dp"
                android:text="dfgdfg"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_product1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="1dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/myfont"
                    android:textColor="@color/grey_dark"
                    android:textSize="11dp"
                    android:text="dfgdrretyreyrefg"
                    android:visibility="visible"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_qty1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:padding="1dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/myfont"
                android:textColor="@color/grey_dark"
                android:textSize="11dp"
                android:text=""
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:gravity="center"
                android:padding="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_edit1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:background="@drawable/shape_bottom_rounded1"
                    android:src="@android:drawable/ic_menu_edit"/>

                <ImageView
                    android:id="@+id/im_delete1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:layout_marginLeft="4dp"
                    android:src="@android:drawable/ic_delete"
                    android:background="@drawable/shape_bottom_rounded1"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>