<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="-20dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/top_rounded_white">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@color/color_tab"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:text="Filter"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:tint="@color/white" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/shape_service_list"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="10dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Customer"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                app:endIconMode="custom"
                                app:startIconDrawable="@drawable/icon_svg_customer"
                                app:startIconTint="@color/colorPrimaryDark"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Customer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:backgroundTint="@color/greydark"
                                    android:textSize="14dp"
                                    android:singleLine="true"
                                    android:focusableInTouchMode="true"
                                    android:editable="true"
                                    android:drawableTint="@color/textColor"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/greydarks"
                                    android:drawablePadding="-10dp"
                                    android:textStyle="normal"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Mobile"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                app:endIconMode="custom"
                                app:startIconDrawable="@drawable/icon_svg_mobile"
                                app:startIconTint="@color/colorPrimaryDark"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:drawableLeft="@drawable/svg_report"
                                    android:backgroundTint="@color/greydark"
                                    android:textSize="14dp"
                                    android:singleLine="true"
                                    android:focusableInTouchMode="true"
                                    android:editable="true"
                                    android:inputType="phone"
                                    android:drawableTint="@color/textColor"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/greydarks"
                                    android:drawablePadding="-10dp"
                                    android:textStyle="normal"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Area"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                app:endIconMode="custom"
                                app:startIconDrawable="@drawable/icon_svg_ticketno"
                                app:startIconTint="@color/colorPrimaryDark"
                                style="@style/Widget.App.TextInputLayout"
                                android:visibility="visible">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:drawableLeft="@drawable/svg_report"
                                    android:backgroundTint="@color/greydark"
                                    android:textSize="14dp"
                                    android:singleLine="true"
                                    android:focusableInTouchMode="true"
                                    android:editable="true"
                                    android:drawableTint="@color/textColor"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/greydarks"
                                    android:drawablePadding="-10dp"
                                    android:textStyle="normal"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_Due_Amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Due Amount"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                app:endIconMode="custom"
                                app:startIconDrawable="@drawable/icon_svg_ticketno"
                                app:startIconTint="@color/colorPrimaryDark"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_Due_Amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="1dp"
                                    android:paddingBottom="1dp"
                                    android:drawableLeft="@drawable/svg_report"
                                    android:backgroundTint="@color/greydark"
                                    android:textSize="14dp"
                                    android:singleLine="true"
                                    android:inputType="numberDecimal"
                                    android:focusableInTouchMode="true"
                                    android:editable="true"
                                    android:drawableTint="@color/textColor"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/greydarks"
                                    android:drawablePadding="-10dp"
                                    android:textStyle="normal"/>

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>





                        <LinearLayout
                            android:id="@+id/ll_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtReset"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textColor="@color/greydark"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/btn_shape_reset"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:textAllCaps="false"
                                android:text="RESET" />


                            <TextView
                                android:id="@+id/txtSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/btn_shape_submit"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:textAllCaps="false"
                                android:text="SEARCH" />


                        </LinearLayout>




                    </LinearLayout>
                </ScrollView>

            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>