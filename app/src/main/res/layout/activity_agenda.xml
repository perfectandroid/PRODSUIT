<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imback"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:src="@drawable/icback"
                    android:tint="@color/black"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="left"
                    android:text="Agenda"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imLeadedit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:layout_weight="2"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/black"
                    android:visibility="invisible"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_today_comp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="center"
                            android:fontFamily="@font/myfont"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30dp"/>

                        <TextView
                            android:id="@+id/tv_today_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="out of 0 activity completed today"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/myfont"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="15dp"/>



                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:background="@color/colorPrimary"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center"                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/grid_sitevisit"
                                        android:layout_centerInParent="true"/>

                                    <TextView
                                        android:id="@+id/tv_count_pending"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginTop="1dp"
                                        android:background="@drawable/shape_pending"
                                        android:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pending"
                                    android:gravity="center"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center"                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/grid_todolist"
                                        android:layout_centerInParent="true"/>

                                    <TextView
                                        android:id="@+id/tv_count_upcoming"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginLeft="40dp"
                                        android:background="@drawable/shape_upcoming"
                                        android:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Upcoming"
                                    android:gravity="center"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center"                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/grid_report"
                                        android:layout_centerInParent="true"/>

                                    <TextView
                                        android:id="@+id/tv_count_complete"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginLeft="40dp"
                                        android:background="@drawable/shape_complete"
                                        android:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />


                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Completed"
                                    android:gravity="center"
                                    android:fontFamily="@font/myfont"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scrollbars="horizontal"
                                app:tabIndicatorColor="@color/colorAccent"
                                app:tabSelectedTextColor="@color/black"
                                app:tabTextColor="@color/greydark"
                                app:tabGravity="center"
                                android:layout_marginTop="10dp"
                                style="@style/customfontstyle"
                                android:visibility="gone"/>
                            <LinearLayout
                                android:id="@+id/llMainDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_tab_pending"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Pending"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:textSize="15dp"
                                        android:fontFamily="@font/myfont"
                                        android:textColor="@color/black"
                                        android:singleLine="true"
                                        android:background="@drawable/under_line_color"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:id="@+id/tv_tab_upcoming"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Upcoming"
                                        android:padding="5dp"
                                        android:textSize="15dp"
                                        android:gravity="center"
                                        android:singleLine="true"
                                        android:fontFamily="@font/myfont"
                                        android:textColor="@color/black"
                                        android:background="@drawable/under_line_trans"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:id="@+id/tv_tab_completed"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Completed"
                                        android:gravity="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:singleLine="true"
                                        android:fontFamily="@font/myfont"
                                        android:textColor="@color/black"
                                        android:background="@drawable/under_line_trans"
                                        android:textStyle="bold"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_actionType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_toLeftOf="@+id/img_search"
                                        android:background="@drawable/shape_bg"
                                        android:drawableRight="@drawable/arrowright"
                                        android:drawableTint="@color/greydark"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:hint="Type"
                                        android:fontFamily="@font/myfont"
                                        android:padding="8dp"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textSize="15dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llPending"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="PENDING"
                                        android:gravity="center"
                                        android:fontFamily="@font/myfont"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginTop="10dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llUpComing"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="UPCOMING"
                                        android:gravity="center"
                                        android:fontFamily="@font/myfont"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginTop="10dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llComplete"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="COMPLETE"
                                        android:gravity="center"
                                        android:fontFamily="@font/myfont"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:layout_marginTop="10dp"/>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>





            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


