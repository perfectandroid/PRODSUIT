                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:orientation="vertical">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.8"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:padding="2dp"
                                                    android:src="@drawable/icon_svg_customer"
                                                    app:tint="@color/colorPrimary" />
                                                <!--                            app:tint="@color/list_icon"-->

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="Customer"
                                                    android:textColor="@color/list_label"
                                                    android:layout_centerVertical="true" />
                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="5dp"
                                                android:layout_height="match_parent"
                                                android:gravity="start"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/myfont"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:layout_centerVertical="true" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tv_Customer"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:paddingLeft="2dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="Ranjith"
                                                    android:textStyle="normal"
                                                    android:textColor="@color/black"
                                                    android:layout_centerVertical="true" />

                                            </LinearLayout>



                                        </LinearLayout>



                                        <View
                                            android:layout_width="0.5dp"
                                            android:layout_height="1dp"
                                            android:background="@color/color_background1"
                                            android:visibility="gone"/>


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.8"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:padding="2dp"
                                                    android:src="@drawable/icon_svg_mobile"
                                                    app:tint="@color/colorPrimary" />
                                                <!--                            app:tint="@color/list_icon"-->

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="Mobile"
                                                    android:textColor="@color/list_label"
                                                    android:layout_centerVertical="true" />
                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="5dp"
                                                android:layout_height="match_parent"
                                                android:gravity="start"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/myfont"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:layout_centerVertical="true" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tv_Mobile"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:paddingLeft="2dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="8075283549"
                                                    android:textStyle="normal"
                                                    android:textColor="@color/black"
                                                    android:layout_centerVertical="true" />

                                            </LinearLayout>



                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.5dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/color_background1"
                                            android:visibility="gone"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.8"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:padding="2dp"
                                                    android:src="@drawable/icon_svg_area"
                                                    app:tint="@color/colorPrimary" />
                                                <!--                            app:tint="@color/list_icon"-->

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="Address"
                                                    android:textColor="@color/list_label"
                                                    android:layout_centerVertical="true" />
                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="5dp"
                                                android:layout_height="match_parent"
                                                android:gravity="start"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/myfont"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:layout_centerVertical="true" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tv_Area"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:paddingLeft="2dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="Perfect Software Solutions (Clt)"
                                                    android:textStyle="normal"
                                                    android:textColor="@color/black"
                                                    android:layout_centerVertical="true" />

                                            </LinearLayout>



                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.5dp"
                                            android:layout_height="1dp"
                                            android:background="@color/color_background1"
                                            android:visibility="gone"/>


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_employee"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.8"
                                                android:orientation="horizontal">

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:padding="2dp"
                                                    android:src="@drawable/icon_svg_attendedby"
                                                    app:tint="@color/colorPrimary" />
                                                <!--                            app:tint="@color/list_icon"-->

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text="Employee"
                                                    android:textColor="@color/list_label"
                                                    android:layout_centerVertical="true" />
                                            </LinearLayout>

                                            <TextView
                                                android:layout_width="5dp"
                                                android:layout_height="match_parent"
                                                android:gravity="start"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/myfont"
                                                android:text=":"
                                                android:textColor="@color/black"
                                                android:layout_centerVertical="true" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:id="@+id/tv_Employee"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:textSize="12dp"
                                                    android:paddingLeft="2dp"
                                                    android:fontFamily="@font/myfont"
                                                    android:text=""
                                                    android:textStyle="normal"
                                                    android:textColor="@color/black"
                                                    android:layout_centerVertical="true" />

                                            </LinearLayout>



                                        </LinearLayout>


                                        <View
                                            android:layout_width="0.5dp"
                                            android:layout_height="match_parent"
                                            android:background="@color/color_background1"
                                            android:visibility="gone"/>


                                    </LinearLayout>




                                </LinearLayout>




                            </LinearLayout>



                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:background="#ECECEA"
                                android:visibility="gone"/>






                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/list_line"
                            android:visibility="gone"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="#FFFFFF"
                        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                        android:outlineSpotShadowColor="@color/colorPrimaryDark"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">
                        <!--    app:cardUseCompatPadding="true"-->
                        <!--    android:backgroundTint="@color/white"-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_TransDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Trans Date"
                                android:layout_weight="1"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_TransDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_fd_date"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_CollectionDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Collection Date"
                                android:layout_weight="1"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_CollectionDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_fd_date"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_CollectedBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Collected By"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                style="@style/Widget.App.TextInputLayout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tie_CollectedBy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/svg_fd_date"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/textColor"
                                    android:editable="false"
                                    android:fontFamily="@font/myfont"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="8dp"
                                    android:focusableInTouchMode="false"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/greydarks"
                                    android:textSize="14dp"
                                    android:textStyle="normal" />

                            </com.google.android.material.textfield.TextInputLayout>




                        </LinearLayout>



                    </androidx.cardview.widget.CardView>




                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


