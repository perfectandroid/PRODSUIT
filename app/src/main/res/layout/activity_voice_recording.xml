<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_lead"
    tools:context=".View.Activity.VoiceRecordingActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imback"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:src="@drawable/back_arro"
                    tools:ignore="UseAppTint" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Voice recording"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/white"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/myfont" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imVoice"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:background="@color/color_activity_transparent"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_voice"
                    android:tint="@color/white"
                    tools:ignore="UseAppTint" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="Hareesh"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="9895314499"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/recImg"
                android:visibility="gone"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/audiorecordingicon"
                android:padding="70dp"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieImg"
                android:layout_marginTop="30dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                android:layout_width="300dp"
                android:layout_height="300dp">


            </com.airbnb.lottie.LottieAnimationView>
            <Chronometer
                android:layout_marginTop="30dp"
                android:id="@+id/recordTime"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Chronometer>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:paddingBottom="10dp"
            android:foregroundGravity="center"
            android:orientation="vertical">
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Start Recording"
                    android:src="@drawable/record"
                    android:layout_marginRight="-20dp"
                    android:id="@+id/activity_main_record"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"

                    android:text="Stop Recording"
                    android:layout_marginLeft="-20dp"
                    android:src="@drawable/stoprecord"
                    android:id="@+id/activity_main_stop"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/playrecording"
                    android:text="Play Recording"
                    android:layout_margin="10dp"
                    android:id="@+id/activity_main_play"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stop Playing"
                    android:layout_margin="10dp"
                    android:src="@drawable/pausebutton"
                    android:id="@+id/activity_main_stop_playing"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>