<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="8dp"
            android:text="select date"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:textStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:hint="Method">

                    <AutoCompleteTextView
                        android:id="@+id/at_method"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.5"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/greydark"
                        android:dropDownWidth="200dp"
                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/myfont"
                        android:paddingLeft="15dp"
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="14dp"
                        android:visibility="visible" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:hint="Ref No.">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_reff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:hint="Amount">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/act_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_add"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/img_refresh"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/refresh"
                        app:tint="@color/colorPrimary" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="6dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/textColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/myfont"
                            android:singleLine="true"
                            android:text="Balance Amount"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:text="\u20b9"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_netAmount"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="25dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/todolist_round"
                        android:orientation="horizontal"
                        android:weightSum="11">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:fontFamily="@font/myfont"
                            android:gravity="center"
                            android:text="Method"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:fontFamily="@font/myfont"
                            android:gravity="center"
                            android:text="Ref No."
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:fontFamily="@font/myfont"
                            android:gravity="center"
                            android:text="Amount"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/myfont"
                    android:padding="2dp"
                    android:text="Balance Amt. should be Zero"
                    android:textColor="@color/quantum_orange"
                    android:textSize="13dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:background="@drawable/btn_shape_reset"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="8dp"
                        android:text="CANCEL"
                        android:textAllCaps="false"
                        android:textColor="@color/greydark"
                        android:textSize="15dp" />


                    <TextView
                        android:id="@+id/txtSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/btn_shape_submit"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="8dp"
                        android:text="OK"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15dp" />


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.cardview.widget.CardView>
