<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:orientation="vertical">
    <!--    app:cardUseCompatPadding="true"-->



    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        app:cardElevation="5dp">
        <!--    app:cardUseCompatPadding="true"-->

        <LinearLayout
            android:id="@+id/llProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_followupticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:paddingRight="10dp"
                    android:fontFamily="@font/myfont"
                    android:textColor="@color/white"
                    android:textSize="@dimen/header_text"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <CheckBox
                        android:id="@+id/chk_box"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="end"
                        app:buttonTint="@color/white"
                        />

                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_serviceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/productfollowup"
                            app:tint="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tie_item_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:text="Item Name"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/til_item_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/myfont"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                        </LinearLayout>




                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_background1"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/warrantyfollowup"
                            app:tint="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tie_warranty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:text="Warranty"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/til_warranty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/myfont"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                        </LinearLayout>




                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_background1"
                            android:visibility="gone"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/servicedate"
                            app:tint="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tie_warranty_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:text="Service Wty Exp Dt"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/til_warranty_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/myfont"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                        </LinearLayout>




                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_background1"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/servicedate"
                            app:tint="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tie_replacement_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:text="Replacement Wty Exp Dt"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/til_replacement_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/myfont"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                        </LinearLayout>




                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_background1"
                            android:visibility="gone"/>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/list_line"
                    android:visibility="visible"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="14dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:layout_gravity="center"
                                android:text="Product Wise Complaint"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/til_productwise_cmplt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="10dp"
                            android:drawableEnd="@drawable/down_arrows"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/border_service"
                            android:text=""
                            android:enabled="false"
                            android:textStyle="normal"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true" />


                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_background1"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textSize="14dp"
                                android:layout_weight="1"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:text="Description"
                                android:textStyle="normal"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true" />

                        </LinearLayout>


                        <EditText
                            android:id="@+id/til_servicedescrption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="14dp"
                            android:layout_weight="1"
                            android:paddingLeft="2dp"
                            android:padding="5dp"
                            android:paddingRight="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/border_service"
                            android:text=""
                            android:enabled="false"
                            android:textStyle="normal"
                            android:textColor="@color/black"/>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="1dp"
                            android:background="@color/color_background1"
                            android:visibility="gone"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_line"
            android:visibility="gone"/>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_subproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvv_subproduct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sub Product"
            android:visibility="visible"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingRight="10dp"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/header_text"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="............................................"
            android:visibility="visible"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingRight="10dp"
            android:fontFamily="@font/myfont"
            android:textSize="@dimen/header_text"
            android:textStyle="bold" />




    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>


</LinearLayout>