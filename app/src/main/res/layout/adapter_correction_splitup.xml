<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/correctioncard"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_Customer"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Details"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvv_leadno_1"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="17dp"
                    android:layout_weight="1"
                    android:text="Lead No"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible"/>

                <TextView
                    android:fontFamily="@font/myfont"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:text=":"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_leadNo"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="17dp"
                    android:text="00225"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:background="@drawable/bg_shpae_correction"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="visible"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey_dark"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Requester"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_customername"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:text=""
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="-4dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Action"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_LeadName"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:text=""
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="-4dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Mobile"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_customermobile"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:text="Shaan"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="-4dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Requested On"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_FollowUpDate"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:text=""
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="-4dp"
                        android:drawableTint="@color/greydark"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:visibility="visible"/>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>