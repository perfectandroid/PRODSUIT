<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="1dp"
    android:padding="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:fontFamily="@font/myfont"
            android:background="@drawable/shape_gradient_pop"
            android:padding="15dp"
            android:textAllCaps="true"
            android:text="Product"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_margin="5dp"
            android:background="@drawable/shape_bg"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/actv_namcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:dropDownWidth="200dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/arrow_down"
                android:drawablePadding="5dp"
                android:drawableTint="@color/greydark"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/myfont"
                android:paddingLeft="5dp"
                android:text="Name"
                android:textSize="14dp"
                android:visibility="visible" />
            <!--                                                    android:drawableLeft="@drawable/call_svg"-->

            <Spinner
                android:id="@+id/sp_namemob"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:visibility="gone"/>

            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:background="#d5d5d5"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/edt_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_search"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/myfont"
                    android:hint="Search"
                    android:padding="7dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/search_24"
                    android:padding="5dp" />


            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/llprodstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:text="CODE"
                android:background="@color/todolist_Color"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="3.5"
                android:background="@color/todolist_light_Color"
                android:fontFamily="@font/myfont"
                android:maxLines="2"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="NAME"
                android:textColor="@color/black"
                android:textSize="11dp" />
            <!--        android:drawableRight="@drawable/arrowright"-->

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyCustomer"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
