<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="1dp"
        android:background="@drawable/round_border_trans"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Invoice No"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/svg_invoce_no"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_InvoiceNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />


                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Invoice Date"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/svg_invoce_date"
                        app:tint="@color/colorPrimary" />


                    <TextView
                        android:id="@+id/tv_InvoiceDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="1dp"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Product"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_svg_product"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_Product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />


                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="4dp"
                    android:fontFamily="@font/myfont"
                    android:text="Quantity"
                    android:textColor="@color/greydarks"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="2dp"
                        android:src="@drawable/icon_svg_quantity"
                        app:tint="@color/colorPrimary" />


                    <TextView
                        android:id="@+id/tv_Quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="14dp"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                </LinearLayout>



                <View
                    android:layout_width="0.5dp"
                    android:layout_height="1dp"
                    android:background="@color/color_background1"
                    android:visibility="gone"/>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:paddingLeft="4dp"
            android:fontFamily="@font/myfont"
            android:text="Dealer"
            android:textColor="@color/greydarks"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:src="@drawable/icon_svg_employee"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_Dealer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:paddingLeft="2dp"
                android:fontFamily="@font/myfont"
                android:text=""
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>


</androidx.cardview.widget.CardView>