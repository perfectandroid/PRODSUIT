<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvv_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@drawable/shape_gradient_pop"
        android:padding="10dp"
        android:fontFamily="@font/myfont"
        android:text="Tax Details"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="#DFDDDD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/myfont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="Tax Type"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/myfont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="Percentage"
            android:visibility="visible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/myfont"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="Amount"
            android:visibility="visible"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyOtherCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginBottom="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_bgcolour"
            android:fontFamily="@font/myfont"
            android:padding="2dp"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </RelativeLayout>

</LinearLayout>