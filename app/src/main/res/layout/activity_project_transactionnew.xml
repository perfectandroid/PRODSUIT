<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_header">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="visible"
                        android:layout_weight="2.7"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imback"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:background="@color/color_activity_transparent"
                            android:padding="10dp"
                            android:tint="@color/white"
                            android:src="@drawable/back_arro"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Project Transaction"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/black"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:fontFamily="@font/myfont" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="2.7"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imLeadedit"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:background="@color/color_activity_transparent"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"
                            android:visibility="invisible"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_background"
                    android:orientation="vertical">




                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@+id/llBtn"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_marginRight="2dp"
                                    android:backgroundTint="#FFFFFF"
                                    android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                                    android:outlineSpotShadowColor="@color/colorPrimaryDark"
                                    app:cardElevation="2dp"
                                    android:layout_marginTop="2dp"
                                    app:cardUseCompatPadding="true"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_TransactionType"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Transaction Type *"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_TransactionType"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:editable="false"
                                                    android:enabled="true"
                                                    android:focusableInTouchMode="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:textColor="@color/greydarks"
                                                    android:textSize="14dp"
                                                    android:textStyle="normal" />

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Date"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Date *"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Date"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/vtr_date"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"
                                                    android:enabled="true"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Project"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Project"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Project"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"
                                                    android:enabled="true"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Stage"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Stage"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Stage"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/vtr_date"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"
                                                    android:enabled="true"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Bill_Type"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Bill Type *"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Bill_Type"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"
                                                    android:enabled="true"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Petty_Cashier"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Petty Cashier *"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout"
                                                tools:ignore="InvalidId">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Petty_Cashier"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/vtr_date"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"
                                                    android:enabled="true"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Employee"
                                                style="@style/Widget.App.TextInputLayout"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginRight="5dp"
                                                android:layout_weight="1"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:hint="Employee *">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Employee"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:editable="false"
                                                    android:enabled="true"
                                                    android:focusableInTouchMode="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:textColor="@color/greydarks"
                                                    android:textSize="14dp"
                                                    android:textStyle="normal" />

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_OtherCharges"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Amount "
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_OtherCharges"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/vtr_date"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:inputType="numberDecimal"
                                                    android:maxLength="10"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_RoundOff"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Round off"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_RoundOff"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="true"
                                                    android:enabled="true"
                                                    android:editable="true"
                                                    android:inputType="numberDecimal"
                                                    android:maxLength="10"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_PaymentMethod"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Payment method"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_PaymentMethod"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/vtr_date"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"
                                                    android:enabled="true"
                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">





                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_NetAmount"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Net Amount"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_NetAmount"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="false"

                                                    android:editable="false"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>



                                        </LinearLayout>



                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <com.google.android.material.textfield.TextInputLayout
                                                android:id="@+id/til_Remarks"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:hint="Remarks"
                                                android:layout_marginTop="10dp"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                style="@style/Widget.App.TextInputLayout">

                                                <com.google.android.material.textfield.TextInputEditText
                                                    android:id="@+id/tie_Remarks"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center_vertical"
                                                    android:paddingLeft="10dp"
                                                    android:paddingTop="8dp"
                                                    android:paddingBottom="8dp"
                                                    android:drawableLeft="@drawable/svg_fd_actiontype"
                                                    android:drawablePadding="5dp"
                                                    android:drawableTint="@color/textColor"
                                                    android:textSize="14dp"
                                                    android:focusableInTouchMode="true"
                                                    android:enabled="true"
                                                    android:editable="true"
                                                    android:maxLength="250"
                                                    android:maxLines="4"
                                                    android:fontFamily="@font/myfont"
                                                    android:textColor="@color/greydarks"
                                                    android:textStyle="normal"/>

                                            </com.google.android.material.textfield.TextInputLayout>



                                        </LinearLayout>












                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                        </androidx.core.widget.NestedScrollView>






                        <LinearLayout
                            android:id="@+id/llBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/color_background"
                            android:layout_alignParentBottom="true">



                            <Button
                                android:id="@+id/btnReset"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1.5"
                                android:background="@drawable/btn_shape_reset"
                                android:fontFamily="@font/myfont"
                                android:padding="2dp"
                                android:text="Reset"
                                android:textStyle="bold"
                                android:textColor="@color/greydark"
                                android:textAllCaps="true"
                                android:textSize="15dp"
                                android:visibility="visible"/>

                            <Button
                                android:id="@+id/btnSubmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="@font/myfont"
                                android:background="@drawable/btn_shape_submit"
                                android:padding="2dp"
                                android:layout_weight="1"
                                android:textAllCaps="true"
                                android:text="Submit"
                                android:visibility="visible"/>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>





            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


