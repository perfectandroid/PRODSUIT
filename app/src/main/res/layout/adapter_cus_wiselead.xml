<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llLeadDetail"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSino"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_weight=".25"
            android:background="@color/list_si"
            android:fontFamily="@font/myfont"
            android:gravity="center"

            android:text="14"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/list_data"
            android:textSize="15dp"
            android:maxLines="2"
            android:fontFamily="@font/myfont"
            android:text=""
            android:layout_weight="1.5"
            android:drawableRight="@drawable/svg_right_arrow"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/txtLeadNo" />
        <TextView
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/list_data"
            android:textSize="15dp"
            android:id="@+id/txtMob"
            android:fontFamily="@font/myfont"
            android:text=""
            android:layout_weight="1.25"

            android:textColor="@color/black"
            android:layout_centerVertical="true"
           />
        <!--        android:drawableRight="@drawable/arrowright"-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>


</androidx.cardview.widget.CardView>
