<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/lToDoList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mask_group"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_leadNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_leadno"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:background="@drawable/number_bg_card"
                    android:textColor="@color/black"/>


                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/circle_white">

                    <ImageView
                        android:id="@+id/imvpriority"
                        android:fontFamily="@font/myfont"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/calender_ic"
                        android:gravity="center" />


                </LinearLayout>


                <TextView
                    android:id="@+id/txtv_Priority"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/txtv_date"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:drawablePadding="10dp"
                    android:layout_margin="5dp"
                    android:text=""
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_custmr"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_mobile"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/mobile_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/tv_nextdate"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/calendar_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>
                <!--                android:drawableLeft="@drawable/deadline"-->

                <TextView
                    android:id="@+id/tvv_address"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:visibility="visible"/>


                <TextView
                    android:id="@+id/tv_entered_date"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:visibility="visible"/>
                <!--                android:drawableLeft="@drawable/deadline"-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/txtv_collectedby"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:textSize="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:visibility="visible"/>

            </LinearLayout>

