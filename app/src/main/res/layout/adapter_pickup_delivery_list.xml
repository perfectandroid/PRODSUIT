<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/color_pickup"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_TicketNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/svg_trans50"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@drawable/circle_white">

                    <ImageView
                        android:id="@+id/img_Priority"
                        android:fontFamily="@font/myfont"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_chkboxascdsc"
                        android:gravity="center" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_Customer"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_address"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:visibility="gone"/>

                <!--                android:drawableLeft="@drawable/addressicon"-->

                <TextView
                    android:id="@+id/tv_Mobile"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/ic_mobile_24"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_DeliveryDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/ic_calendar_24"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <!--                android:drawableLeft="@drawable/trolley"-->

                <TextView
                    android:id="@+id/tv_AssignedDate"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/ic_calendar1_24"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>
                <!--                android:drawableLeft="@drawable/deadline"-->

                <TextView
                    android:id="@+id/tv_Employee"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/ic_person_24"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"
                    android:visibility="visible"/>
                <!--                android:drawableLeft="@drawable/deadline"-->


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_dark"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/call_svg"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/location_icon"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/svg_message_sqr"
                        app:tint="@color/colorPrimary"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>