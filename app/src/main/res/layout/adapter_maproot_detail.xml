<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtLineStart"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textSize="15dp"
                android:fontFamily="@font/myfont"
                android:text=""
                android:layout_weight="1"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                app:tint="@color/colorPrimary" />




            <TextView
                android:id="@+id/txtLineEnd"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textSize="15dp"
                android:fontFamily="@font/myfont"
                android:text=""
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:visibility="visible"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/round_border_trans"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:fontFamily="@font/myfont"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/svg_fd_time"
                            android:fontFamily="@font/myfont"
                            android:text="Time"
                            android:textColor="@color/black"
                            android:visibility="visible"/>



                        <TextView
                            android:id="@+id/txtTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:textSize="13dp"
                            android:layout_marginTop="-3dp"
                            android:textStyle="normal"
                            android:fontFamily="@font/myfont"
                            android:text="12:31PM"
                            android:textColor="@color/black" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtBattery"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:background="@drawable/svg_battery"
                            android:textSize="14dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:textStyle="bold"
                            android:fontFamily="@font/myfont"
                            android:text="100 %"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/grey"
                    android:visibility="gone"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="14dp"
                        android:drawableLeft="@drawable/svg_walk_assigned"
                        android:textStyle="bold"
                        android:fontFamily="@font/myfont"
                        android:text="Address"
                        android:textColor="@color/black"
                        android:visibility="visible"/>


                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:textSize="13dp"
                        android:layout_marginTop="-3dp"
                        android:textStyle="normal"
                        android:justificationMode="inter_word"
                        android:fontFamily="@font/myfont"
                        android:text="Provide simple and cost effective tecnology solutions to institutions that t help uplift societies across the globe."
                        android:textColor="@color/black" />


                </LinearLayout>





            </LinearLayout>


        </LinearLayout>



    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        android:visibility="gone"/>



</androidx.cardview.widget.CardView>