<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.ServiceFollowUpSummary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape_header"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imback"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:background="@color/color_activity_transparent"
                        android:paddingLeft="10dp"
                        android:src="@drawable/back_arro"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="left"
                    android:text="Summary"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lin_summary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="Attended By"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/grey_dark"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/tv_attended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:layout_marginTop="-6dp"
                    android:textColorHint="@color/grey_dark"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:src="@drawable/svg_amount"
                            app:tint="@color/textColor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:text="Service Amount "
                                android:textColor="@color/textColor"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_serviceAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:src="@drawable/svg_amount"
                            app:tint="@color/textColor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:text="Buy Back Amount"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_buyBackAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:src="@drawable/svg_amount"
                            app:tint="@color/textColor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:text="Product Amount"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/tv_productAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:src="@drawable/svg_amount"
                            app:tint="@color/textColor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/myfont"
                                android:singleLine="true"
                                android:text="Total Amount        "
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/grey_dark"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-6dp"
                                    android:fontFamily="@font/myfont"
                                    android:singleLine="true"
                                    android:text="\u20b9"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/grey_dark"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/tv_totalAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-6dp"
                                    android:fontFamily="@font/myfont"
                                    android:singleLine="true"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/grey_dark"
                                    android:textSize="15dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="6dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/textColor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/myfont"
                            android:singleLine="true"
                            android:text="Total Amount"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-6dp"
                            android:fontFamily="@font/myfont"
                            android:hint="1250"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/grey_dark"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="17dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:hint="Visited Date">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tv_DateClick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            android:gravity="center_vertical"
                            android:focusableInTouchMode="false"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="25-12-2023"
                            android:textColor="@color/greydarks"
                            android:textSize="14dp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:hint="Action">
                        <AutoCompleteTextView
                            android:id="@+id/actv_action"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1.5"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/greydark"
                            android:dropDownWidth="200dp"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/myfont"
                            android:hint="Action"
                            android:paddingLeft="15dp"
                            android:textColor="@color/grey_dark"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="14dp"
                            android:visibility="visible" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_date"
                        app:tint="@color/grey_dark" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myfont"
                        android:hint="Visited Date"
                        android:padding="7dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg2"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/grey_dark" />

                    <EditText
                        android:id="@+id/edtServiceAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_search"
                        android:background="@drawable/background_transparent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableTint="@color/greydark"
                        android:focusable="false"
                        android:fontFamily="@font/myfont"
                        android:hint="Service Amount"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/shape_bg"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/svg_notepad"
                        app:tint="@color/grey_dark" />

                    <EditText
                        android:id="@+id/edtCustomerNote"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_toLeftOf="@+id/img_search"
                        android:background="@drawable/background_transparent"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:hint="Customer Note"
                        android:importantForAutofill="no"
                        android:padding="7dp"
                        android:text=""
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:hint="Customer Note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:minHeight="80dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:hint="Employee Note">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:minHeight="80dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg2"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/grey_dark" />

                    <EditText
                        android:id="@+id/edtBuyBackAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_search"
                        android:background="@drawable/background_transparent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableTint="@color/greydark"
                        android:focusable="false"
                        android:fontFamily="@font/myfont"
                        android:hint="Buy Back Amount"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:hint="Discount Amount">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDiscountAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:inputType="numberDecimal"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/grey_dark" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_search"
                        android:background="@drawable/background_transparent"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:hint="Discount Amount"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_alert_diss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myfont"
                    android:padding="2dp"
                    android:text="Amount should be less than or Equal to Total Amount"
                    android:textColor="@color/quantum_orange"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg2"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/grey_dark" />

                    <EditText
                        android:id="@+id/edtProductAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/img_search"
                        android:background="@drawable/background_transparent"
                        android:clickable="false"
                        android:cursorVisible="false"

                        android:drawableTint="@color/greydark"
                        android:focusable="false"
                        android:fontFamily="@font/myfont"
                        android:hint="Product Amount"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:maxLength="15"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/grey_dark"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:padding="6dp"
                        android:src="@drawable/svg_amount"
                        app:tint="@color/textColor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/myfont"
                            android:singleLine="true"
                            android:text="Security Amount"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_netAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-6dp"
                            android:fontFamily="@font/myfont"
                            android:singleLine="true"
                            android:text="\u20b91250"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="25dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="55dp"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:hint="Bill Type">
                        <AutoCompleteTextView
                            android:id="@+id/actv_bankType"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1.5"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/greydark"
                            android:dropDownWidth="200dp"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/myfont"
                            android:paddingLeft="15dp"
                            android:textColor="@color/grey_dark"
                            android:textColorHint="@color/grey_dark"
                            android:textSize="14dp"
                            android:visibility="visible" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/text_payment_method"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:text="Payment method"
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:background="@drawable/shape_bg2"
                        android:backgroundTint="@color/leadstatus_color4"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey_dark"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/lin_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_moreComponents"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_shape_submit"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:text="save"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>