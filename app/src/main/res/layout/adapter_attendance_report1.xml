<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_margin="1dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llLocationMarking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:background="@color/upcomung_Color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/att"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBattery"
                    android:layout_width="45dp"
                    android:layout_height="25dp"
                    android:text=""
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textStyle="bold" />


            </LinearLayout>



            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:textSize="13dp"
                android:drawableTint="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="-2dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:textSize="13dp"
                android:drawableTint="@color/white"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text=""
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:fontFamily="@font/myfont"
                        android:gravity="start"
                        android:textSize="18dp"
                        android:drawableTint="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtv_Designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text=""
                        android:layout_marginTop="-7dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:fontFamily="@font/myfont"
                        android:gravity="start"
                        android:textSize="15dp"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPunchin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="14dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="bold" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Time :"
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtPunchinTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location :"
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtPunchinLoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPunchout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="14dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:text="Time :"
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtPunchoutTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location :"
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/txtPunchoutLoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:layout_marginTop="0dp"
                        android:textSize="12dp"
                        android:justificationMode="none"
                        android:drawableTint="@color/black"
                        android:textStyle="normal" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:layout_weight="1.3"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_TimeDue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="12dp"
                                android:paddingLeft="2dp"
                                android:fontFamily="@font/myfont"
                                android:text=""
                                android:textStyle="normal"
                                android:textColor="@color/red"
                                android:layout_centerVertical="true"
                                android:visibility="invisible"/>

                        </LinearLayout>



                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:background="@color/grey"
                        android:visibility="invisible"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/im_rootview"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/svg_ic_direction"
                                    android:scaleType="fitXY"
                                    android:padding="5dp"
                                    android:visibility="visible"
                                    app:tint="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                      <!--  <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="@color/grey"
                            android:visibility="visible"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"/>-->

                        <LinearLayout
                            android:id="@+id/ll_tracker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/im_mapview"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/location"
                                    android:scaleType="fitXY"
                                    android:padding="5dp"
                                    android:visibility="gone"
                                    app:tint="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                    <!--    <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:background="@color/grey"
                            android:visibility="visible"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"/>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/im_detail"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/svg_list"
                                    android:scaleType="fitXY"
                                    android:padding="5dp"
                                    android:visibility="visible"
                                    app:tint="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>




            </LinearLayout>


        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>