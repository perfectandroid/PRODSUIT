<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="2.7"
            android:background="#D7DDDA"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="256"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:tint="@color/white" />

        <!--        android:background="@drawable/svg_auth_round"-->


        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_arrow"
            android:layout_toRightOf="@+id/tv_counts"
            android:fontFamily="@font/myfont"
            android:gravity="center_vertical"
            android:text="Lead"
            android:textAllCaps="false"
            android:textColor="#6A6A6A"
            android:textSize="18dp"
            android:textStyle="bold"
            android:tint="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/arrowright"
                app:tint="@color/grey"
                android:visibility="visible"/>
            <!--        android:src="@drawable/svg_auth_arrow"-->
        </LinearLayout>




    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:padding="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:id="@+id/rltv_main"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="1dp"
            android:background="@drawable/border_1"
            android:orientation="horizontal">
            <!--   android:background="@drawable/shapes_1"-->
            <LinearLayout

                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llleft"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:background="@drawable/rect_shape"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/background_shape"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/to_do_02"
                                tools:ignore="UseAppTint" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_values"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Lead"
                    android:textStyle="bold"
                    android:layout_weight="1"

                    android:textSize="20dp"
                    android:fontFamily="@font/myfont" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_counts"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text=""
                        android:gravity="center"

                        android:background="@drawable/counts_color1"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:fontFamily="@font/myfont" />
                </LinearLayout>


            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>



</LinearLayout>