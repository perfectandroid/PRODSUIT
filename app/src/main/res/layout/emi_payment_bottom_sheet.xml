<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        app:cardElevation="0dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/top_rounded_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="@color/color_tab"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/img_close_details"
                    android:background="@color/color_tab"
                    android:scrollbars="horizontal"
                    app:tabGravity="center"
                    app:tabTextAppearance="@style/customfontstyle"
                    app:tabTextColor="@color/black" />

                <ImageView
                    android:id="@+id/img_close_details"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/svg_closedround_white"
                    android:visibility="gone"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:background="@color/color_tab"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="Payment Method"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ll_header"
                android:layout_above="@+id/ll_apply"
                android:orientation="vertical"
                android:padding="15dp">

<!--                <ScrollView-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:fitsSystemWindows="true"-->
<!--                    android:fillViewport="true"-->
<!--                    android:padding="15dp"-->
<!--                    android:scrollbars="vertical">-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_pay_method"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/white"
                                    android:textSize="13dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/myfont"
                                    android:text="Method *"
                                    android:textColor="@color/black"
                                    android:visibility="visible"/>

                                <EditText
                                    android:id="@+id/edtPayMethod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginBottom="0dp"
                                    android:inputType="numberDecimal"
                                    android:layout_toLeftOf="@+id/img_search"
                                    android:background="@drawable/shape_bg"
                                    android:drawableLeft="@drawable/svg_payment_method"
                                    android:drawableTint="@color/greydark"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="5dp"
                                    android:maxLength="12"
                                    android:editable="false"
                                    android:focusableInTouchMode="false"
                                    android:hint=""
                                    android:fontFamily="@font/myfont"
                                    android:padding="7dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textSize="15dp"
                                    android:visibility="visible"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginRight="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/white"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/myfont"
                                        android:text="Ref No."
                                        android:textColor="@color/black"
                                        android:visibility="visible"/>

                                    <EditText
                                        android:id="@+id/edtPayRefNo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginRight="0dp"
                                        android:layout_marginBottom="0dp"
                                        android:inputType="numberDecimal"
                                        android:layout_toLeftOf="@+id/img_search"
                                        android:background="@drawable/shape_bg"
                                        android:drawableLeft="@drawable/svg_notepad"
                                        android:drawableTint="@color/greydark"
                                        android:paddingLeft="0dp"
                                        android:paddingRight="5dp"
                                        android:maxLength="12"
                                        android:hint=""
                                        android:fontFamily="@font/myfont"
                                        android:padding="7dp"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textSize="15dp"
                                        android:visibility="visible"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginLeft="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_pay_Amount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@color/white"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/myfont"
                                        android:text="Amount *"
                                        android:textColor="@color/black"
                                        android:visibility="visible"/>

                                    <EditText
                                        android:id="@+id/edtPayAmount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="0dp"
                                        android:layout_marginRight="0dp"
                                        android:layout_marginBottom="0dp"
                                        android:layout_marginLeft="0dp"
                                        android:inputType="numberDecimal"
                                        android:layout_toLeftOf="@+id/img_search"
                                        android:background="@drawable/shape_bg"
                                        android:drawableLeft="@drawable/svg_amount"
                                        android:drawableTint="@color/greydark"
                                        android:paddingLeft="0dp"
                                        android:paddingRight="5dp"
                                        android:maxLength="20"
                                        android:hint=""
                                        android:fontFamily="@font/myfont"
                                        android:padding="7dp"
                                        android:singleLine="true"
                                        android:text=""
                                        android:textSize="15dp"
                                        android:visibility="visible"/>


                                </LinearLayout>




                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_bal_Amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:gravity="center_vertical"
                                        android:background="@color/white"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/myfont"
                                        android:text="Bal. Amount"
                                        android:textColor="@color/black"
                                        android:visibility="visible"/>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:padding="2dp"
                                            android:src="@drawable/icon_svg_quantity"
                                            app:tint="@color/greydark"
                                            android:visibility="visible"/>


                                        <TextView
                                            android:id="@+id/txtPayBalAmount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:gravity="start"
                                            android:background="@color/white"
                                            android:textSize="13dp"
                                            android:textStyle="normal"
                                            android:fontFamily="@font/myfont"
                                            android:text="0"
                                            android:textColor="@color/black"
                                            android:visibility="visible"/>


                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">


                                    <ImageView
                                        android:id="@+id/img_PayAdd"
                                        android:layout_width="40dp"
                                        android:layout_height="37dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/shape_bg"
                                        android:fontFamily="@font/myfont"
                                        android:padding="10dp"
                                        android:src="@drawable/svg_icon_add"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:visibility="visible"
                                        app:tint="@color/colorPrimary" />

                                    <ImageView
                                        android:id="@+id/img_PayRefresh"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/shape_bg"
                                        android:fontFamily="@font/myfont"
                                        android:padding="10dp"
                                        android:src="@drawable/svg_icon_refresh"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="13dp"
                                        android:textStyle="bold"
                                        android:visibility="visible"
                                        app:tint="@color/colorPrimary" />


                                </LinearLayout>




                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_paymentlist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_bottom_rounded1"
                            android:layout_marginTop="15dp"
                            android:padding="2dp"
                            android:orientation="vertical">

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text="List"
                             android:gravity="center"
                             android:textStyle="bold"
                             android:textSize="15dp"
                             android:padding="5dp"
                             android:background="@color/grey1"/>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyPaymentList"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible" />


                        </LinearLayout>





<!--                        <androidx.cardview.widget.CardView-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            app:cardCornerRadius="2dp"-->
<!--                            android:layout_marginTop="20dp"-->
<!--                            android:backgroundTint="#FFFFFF"-->
<!--                            android:outlineAmbientShadowColor="@color/colorPrimaryDark"-->
<!--                            android:outlineSpotShadowColor="@color/colorPrimaryDark"-->
<!--                            app:cardElevation="2dp"-->
<!--                            app:cardUseCompatPadding="true">-->

<!--                           -->

<!--                        </androidx.cardview.widget.CardView>-->





                    </LinearLayout>



<!--                </ScrollView>-->


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apply"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="end"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">


                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_margin="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/myfont"
                    android:background="@drawable/btn_bgcolour"
                    android:padding="2dp"
                    android:layout_weight="2"
                    android:textAllCaps="true"
                    android:text="apply" />



            </LinearLayout>







        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>