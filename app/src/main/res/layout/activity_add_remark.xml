<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".View.Activity.AddRemarkActivity"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imback"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10dp"
                        android:background="@color/color_activity_transparent"
                        android:padding="5dp"
                        android:src="@drawable/icback"
                        android:tint="@color/greydark"
                        tools:ignore="UseAppTint" />

                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:text="remark"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="19dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imLeadedit"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:background="@color/color_activity_transparent"
                        android:padding="5dp"
                        android:src="@drawable/ic_edit"
                        android:visibility="invisible"
                        tools:ignore="UseAppTint" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/llBtn"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="2dp"
                        android:layout_margin="10dp"
                        app:cardElevation="1dp">
                        <!--                    app:cardUseCompatPadding="true"-->

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_Date"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:hint="Date"
                                            android:layout_margin="5dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_Date"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableRight="@drawable/ic_calendar_svg"
                                                android:textSize="14dp"
                                                android:editable="false"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/til_Time"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:hint="Time"
                                            android:layout_margin="5dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            style="@style/Widget.App.TextInputLayout">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/tie_Time"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_vertical"
                                                android:paddingLeft="10dp"
                                                android:paddingTop="8dp"
                                                android:paddingBottom="8dp"
                                                android:drawableRight="@drawable/clock_svg"
                                                android:textSize="14dp"
                                                android:editable="false"
                                                android:drawableTint="@color/textColor"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydarks"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"/>

                                        </com.google.android.material.textfield.TextInputLayout>




                                    </LinearLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_CallStatus"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Call Status"
                                        android:layout_margin="5dp"
                                        android:drawableTint="@color/textColor"
                                        android:fontFamily="@font/myfont"
                                        style="@style/Widget.App.TextInputLayout"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/tie_CallStatus"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="8dp"
                                            android:textSize="14dp"
                                            android:editable="false"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="normal"/>

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_CallDuration"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Call Duration [seconds]"
                                        android:layout_margin="5dp"
                                        android:drawableTint="@color/textColor"
                                        android:fontFamily="@font/myfont"
                                        style="@style/Widget.App.TextInputLayout"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/tie_CallDuration"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="8dp"
                                            android:textSize="14dp"
                                            android:inputType="number"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="normal"/>

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_RiskType"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Risk Type"
                                        android:layout_margin="5dp"
                                        android:drawableTint="@color/textColor"
                                        android:fontFamily="@font/myfont"
                                        style="@style/Widget.App.TextInputLayout"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/tie_RiskType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="8dp"
                                            android:drawableRight="@drawable/arrow_down"
                                            android:textSize="14dp"
                                            android:editable="false"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="normal"/>

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_AgentNote"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Agent Note"
                                        android:layout_margin="5dp"
                                        android:drawableTint="@color/textColor"
                                        android:fontFamily="@font/myfont"
                                        style="@style/Widget.App.TextInputLayout">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/tie_AgentNote"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:gravity="top|start"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="8dp"
                                            android:textSize="14dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="normal"/>

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_CustomerNote"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Customer Note"
                                        android:layout_margin="5dp"
                                        android:drawableTint="@color/textColor"
                                        android:fontFamily="@font/myfont"
                                        style="@style/Widget.App.TextInputLayout">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/tie_CustomerNote"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp"
                                            android:gravity="top|start"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="8dp"
                                            android:textSize="14dp"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="normal"/>

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/til_CustomerMentionDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="Customer Mention Date"
                                        android:layout_margin="5dp"
                                        android:drawableTint="@color/textColor"
                                        android:fontFamily="@font/myfont"
                                        style="@style/Widget.App.TextInputLayout"
                                        android:visibility="gone">

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/tie_CustomerMentionDate"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="8dp"
                                            android:paddingBottom="8dp"
                                            android:textSize="14dp"
                                            android:editable="false"
                                            android:drawableTint="@color/textColor"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="normal"/>

                                    </com.google.android.material.textfield.TextInputLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <CheckBox
                                            android:id="@+id/cbAcknowledgement"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/myfont"
                                            android:text="Send Acknowledgement"
                                            android:textAllCaps="false"
                                            android:layout_margin="5dp"
                                            android:textStyle="normal"
                                            android:button="@drawable/checkbox_selector"
                                            android:textColor="@color/greydark"
                                            android:paddingLeft="10dp"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <CheckBox
                                            android:id="@+id/cbSiteVisit"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/myfont"
                                            android:text="Need Site Visit"
                                            android:textAllCaps="false"
                                            android:layout_marginLeft="5dp"
                                            android:textStyle="normal"
                                            android:button="@drawable/checkbox_selector"
                                            android:textColor="@color/greydark"
                                            android:paddingLeft="10dp"
                                            android:textSize="14dp" />


                                        <CheckBox
                                            android:id="@+id/cbNotice"
                                            android:layout_width="match_parent"
                                            android:layout_height="40dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/myfont"
                                            android:text="Need Notice"
                                            android:textAllCaps="false"
                                            android:textStyle="normal"
                                            android:button="@drawable/checkbox_selector"
                                            android:textColor="@color/greydark"
                                            android:paddingLeft="10dp"
                                            android:textSize="14dp" />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>


                        </ScrollView>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">


                        <Button
                            android:id="@+id/btReset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:background="@drawable/btn_shape_reset"
                            android:fontFamily="@font/myfont"
                            android:padding="2dp"
                            android:text="Reset"
                            android:textAllCaps="true"
                            android:textColor="@color/greydark"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/btn_shape_submit"
                            android:padding="2dp"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:text="Submit"
                            android:visibility="visible"/>


                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>





        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>