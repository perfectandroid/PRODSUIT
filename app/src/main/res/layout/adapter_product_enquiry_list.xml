<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/ll_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_image_border"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:src="@drawable/svg_noimage"/>

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtProdct"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:fontFamily="@font/myfont"
                    android:text="hfhfg"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="Code : "
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/myfont"
                        android:text=":"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="@font/myfont"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:text="PROD4489756"
                        android:textColor="@color/textColor1"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:visibility="gone"/>



                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="horizontal">



                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greylight"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtProdct_sales"
                        android:paddingLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="47"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="MRP"
                        android:layout_weight="1.5"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/myfont"
                        android:text=":"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtProdct_mrp"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="55"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />



                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/greylight"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="Price"
                        android:layout_weight="2"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/myfont"
                        android:text=":"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true" />





                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/greylight"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="Stock"
                        android:layout_weight="1.5"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:fontFamily="@font/myfont"
                        android:text=":"
                        android:textColor="@color/textColor1"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtProdct_qty"
                        android:paddingLeft="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textStyle="normal"
                        android:maxLines="1"
                        android:fontFamily="@font/myfont"
                        android:text="Only 2 left"
                        android:layout_weight="1"
                        android:textColor="@color/color_mrp"
                        android:layout_centerVertical="true" />



                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:padding="2dp"
                app:tint="@color/grey"
                android:src="@drawable/arrowright"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"/>





</LinearLayout>