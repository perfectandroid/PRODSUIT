<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llOverDue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="Date                  : "
                        android:maxLines="5"
                        android:textStyle="bold"
                        android:id="@+id/txtv_dte" />
                    <TextView
                        android:id="@+id/txtv_dte1"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text=""
                        android:maxLines="5"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="Customer         : "
                        android:maxLines="5"
                        android:textStyle="bold"
                        android:id="@+id/txtv_cu" />
                    <TextView
                        android:id="@+id/tv_custmr"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text=""
                        android:maxLines="5"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="Product             : "
                        android:maxLines="5"
                        android:textStyle="bold"
                        android:id="@+id/txtv_prdct" />
                    <TextView
                        android:id="@+id/txtv_prdctnme"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text=""
                        android:maxLines="5"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="Collected By     : "
                        android:maxLines="5"
                        android:textStyle="bold"
                        android:id="@+id/txtv_clct" />
                    <TextView
                        android:id="@+id/txtv_clct1"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text=""
                        android:maxLines="5"
                        android:textColor="@color/black"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="Assigned To     : "
                        android:maxLines="5"
                        android:textStyle="bold"
                        android:id="@+id/txtv_asgnd" />
                    <TextView
                        android:id="@+id/txtv_asgndto"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text=""
                        android:maxLines="5"
                        android:textColor="@color/black"
                        />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imCart"
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowright"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>