<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:theme="@style/checkBoxStyle"
                    android:layout_marginRight="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:text="Components"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="-8dp"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:text="Battery Check fffasf ffasfaf ffasfasfsaf fgsgsdfddd"
                        android:textColor="@color/grey_dark"
                        android:textSize="13dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:weightSum="4"
                android:orientation="horizontal"
                android:paddingBottom="2dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_assignedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:text="Service"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_service_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:drawablePadding="5dp"
                        android:layout_marginTop="-8dp"
                        android:drawableTint="@color/greydark"
                        android:fontFamily="@font/myfont"
                        android:gravity="left|center"
                        android:text="Battery Check"
                        android:textColor="@color/grey_dark"
                        android:textSize="13dp" />
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_Date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Service Cost"
                    android:layout_weight="2"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    style="@style/Widget.App.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtServiceCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/svg_amount"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:inputType="numberDecimal"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:weightSum="2">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_tax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Tax Amount"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:drawableTint="@color/textColor"
                android:fontFamily="@font/myfont"
                style="@style/Widget.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTaxAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/svg_amount"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:inputType="numberDecimal"
                    android:paddingBottom="8dp"
                    android:textColor="@color/greydarks"
                    android:textSize="14dp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_net"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Net Amount"
                android:layout_weight="1"
                android:drawableTint="@color/textColor"
                android:fontFamily="@font/myfont"
                style="@style/Widget.App.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNetAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/svg_amount"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:inputType="numberDecimal"
                    android:paddingBottom="8dp"
                    android:textColor="@color/greydarks"
                    android:textSize="14dp"
                    android:textStyle="normal" />

            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remarks"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:drawableTint="@color/textColor"
                    android:fontFamily="@font/myfont"
                    style="@style/Widget.App.TextInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtRemarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/svg_notepad"
                        android:drawablePadding="5dp"
                        android:drawableTint="@color/textColor"
                        android:fontFamily="@font/myfont"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/greydarks"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:drawablePadding="5dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/myfont"
                android:gravity="left|center"
                android:text="Service Type"
                android:textColor="@color/colorPrimary"
                android:textSize="11dp"
                android:textStyle="bold" />
            <AutoCompleteTextView
                android:id="@+id/edtServiceType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/background_style"
                android:drawableRight="@drawable/arrow_down"
                android:drawablePadding="5dp"
                android:drawableTint="@color/greydark"
                android:dropDownWidth="200dp"
                android:editable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/myfont"
                android:hint="Service Type"
                android:paddingLeft="15dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor"
                android:textSize="14dp"
                android:visibility="visible" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>