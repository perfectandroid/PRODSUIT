<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/navbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imback"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:background="@color/color_activity_transparent"
                        android:padding="10dp"
                        android:tint="@color/white"
                        android:src="@drawable/back_arro"
                        tools:ignore="UseAppTint" />

                </LinearLayout>



                <TextView
                    android:id="@+id/tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="Upcoming Tasks"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/white"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:fontFamily="@font/myfont" />

                <TextView
                    android:id="@+id/tv_listCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:tint="@color/white"
                    android:background="@drawable/shape_circle_white"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:fontFamily="@font/myfont" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="3.5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgv_filter"
                        android:src="@drawable/filter1"
                        android:layout_margin="10dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_width="60dp"
                        android:padding="10dp"
                        android:tint="@color/white"
                        android:layout_weight="3"
                        android:layout_height="60dp"
                        android:visibility="visible"
                        tools:ignore="UseAppTint" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgv_sort"
                        android:src="@drawable/ic_sort"
                        android:layout_margin="10dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:tint="@color/white"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        tools:ignore="UseAppTint" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone">



                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_upcmngtasklist"
                android:layout_below="@+id/layoutTop"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_Reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:tint="@color/white"
            app:fabCustomSize="50dp"
            app:rippleColor="@color/white"
            app:srcCompat="@drawable/svg_add_alarm"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

