<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    android:backgroundTint="@color/white"
    android:layout_margin="2dp"
    app:cardElevation="3dp"
    tools:ignore="MissingConstraints">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_Call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Call With"
                    android:textColor="@color/green1"
                    android:textSize="10dp"
                    android:textStyle="normal" />
                <!--                android:background="@drawable/rounded_shape"-->

                <TextView
                    android:id="@+id/txtv_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/greydark"
                    android:textSize="10dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtv_Followup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtv_custmrremrk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="12dp"
                        android:drawableLeft="@drawable/location_svg"
                        android:drawablePadding="5dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtv_empremrk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="12dp"
                        android:drawableLeft="@drawable/call_svg"
                        android:drawablePadding="5dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tvCall_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="12dp"
                        android:drawableLeft="@drawable/product_svg"
                        android:drawablePadding="5dp"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">




                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Call_Icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgv_Icon"
                        android:fontFamily="@font/myfont"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/call_icon"
                        android:tint="@color/green"
                        android:gravity="center"
                        tools:ignore="UseAppTint" />


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtv_Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/greydark"
                    android:textSize="12dp"
                    android:drawablePadding="5dp"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>