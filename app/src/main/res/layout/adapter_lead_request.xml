<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_margin="2dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llRequest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_border_trans"
        android:gravity="center_vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="0dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Customer"
                android:singleLine="true"
                android:textColor="@color/black"
                android:fontFamily="@font/myfont"
                android:gravity="start"
                android:textSize="15dp"
                android:drawableTint="@color/black"
                android:textStyle="normal"
                android:visibility="gone"/>

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:text=":"
                android:gravity="start"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:fontFamily="@font/myfont"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:drawableTint="@color/black"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Mobile"
                    android:fontFamily="@font/myfont"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="start"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:gravity="start"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtDepartment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="-4dp"
                    android:text=""
                    android:fontFamily="@font/myfont"
                    android:singleLine="false"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_weight="1"
                android:padding="0dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Assigned Date"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/myfont"
                    android:gravity="start"
                    android:textSize="15dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:gravity="start"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtAssignedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:layout_marginTop="-4dp"
                    android:fontFamily="@font/myfont"
                    android:singleLine="false"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"
                    android:drawableTint="@color/black"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVoice"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="-3dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Voice"
                android:fontFamily="@font/myfont"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="start"
                android:drawableTint="@color/black"
                android:textStyle="normal" />



            <TextView

                android:id="@+id/voiceData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                android:layout_marginTop="-1dp"
                android:text="voice.mp3"
                app:endIconMode="custom"
                android:fontFamily="@font/myfont"
                android:singleLine="true"
                android:textColor="@color/ColorCold"
                android:textSize="14dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/play_btn"
                android:drawableTint="@color/grey"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="-3dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Remarks"
                android:fontFamily="@font/myfont"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="start"
                android:drawableTint="@color/black"
                android:textStyle="normal" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:text=":"
                android:gravity="start"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="-4dp"
                android:text=""
                android:fontFamily="@font/myfont"
                android:singleLine="false"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:drawableTint="@color/black"
                android:textStyle="normal" />


        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>