<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    android:id="@+id/crd_view"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llfav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:maxLines="2"
            android:fontFamily="@font/myfont"
            android:background="@color/colorPrimaryDark"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:id="@+id/txtsino" />

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/list_data"
            android:textSize="15dp"
            android:maxLines="2"
            android:fontFamily="@font/myfont"
            android:text=""
            android:layout_weight="1"
            android:drawableRight="@drawable/svg_right_arrow"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/txtv_fav" />
        <!--        android:drawableRight="@drawable/arrowright"-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>

    <LinearLayout
        android:id="@+id/llprodcategory1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtsino1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:drawableTint="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtCategory1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sree"
            android:fontFamily="@font/myfont"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:drawableTint="@color/grey"
            android:drawableRight="@drawable/ic_arrow_right"
            android:textStyle="normal" />



    </LinearLayout>

</androidx.cardview.widget.CardView>
