<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:background="@color/color_activity_transparent"
                android:padding="10dp"
                android:tint="@color/black"
                android:layout_weight="2"
                android:src="@drawable/icback"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Expense"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:tint="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/myfont" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:background="@color/color_activity_transparent"
                android:padding="10dp"
                android:tint="@color/black"
                android:src="@drawable/ic_search"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            app:cardMaxElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/budget"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/myfont"
                    android:text="Total Expense"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/homebgcolor"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/tv_abt_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:fontFamily="@font/myfont"
                    android:text="$2500"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="30dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2.5dp"
                app:cardMaxElevation="1dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:padding="5dp"
                    android:text="Expense Details : "
                    android:textStyle="bold"
                    android:fontFamily="@font/myfont"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_custmr"
                            android:fontFamily="@font/myfont"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:textAllCaps="true"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/myfont"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:text="Bus Charge"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/myfont"
                            android:gravity="right|center"
                            android:text="12-10-2021"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="true"
                        android:text="$ 40.00"
                        android:textStyle="bold"
                        android:textColor="@color/red"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/myfont"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:text="Food Expense"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textSize="15dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/myfont"
                            android:gravity="right|center"
                            android:text="12-10-2021"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="true"
                        android:text="$ 40.00"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/myfont"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:text="Auto Charge"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textSize="15dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/myfont"
                            android:gravity="right|center"
                            android:text="12-10-2021"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <TextView
                        android:fontFamily="@font/myfont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="true"
                        android:text="$ 100.00"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_adding"
        app:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchorGravity="bottom|right|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


