<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activity.ReportMainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/navbg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_header">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imback"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="left"
                            android:background="@color/color_activity_transparent"
                            android:padding="10dp"
                            android:tint="@color/white"
                            android:src="@drawable/back_arro"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="reports"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:tint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:fontFamily="@font/myfont" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imLeadedit"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:background="@color/color_activity_transparent"
                            android:padding="5dp"
                            android:src="@drawable/ic_edit"
                            android:visibility="invisible"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"

                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/report_bg"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight=".5"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:padding="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="1dp"
                                android:background="@drawable/lead_report_bg"
                                android:orientation="horizontal">



                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/lead_report"
                                            tools:ignore="UseAppTint" />






                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="Lead Report"
                                        android:textStyle="bold"
                                        android:textColor="@color/lead_report"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/myfont" />


                                </LinearLayout>





                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_lead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp">

                            <!--                            android:backgroundTint="@color/service2"-->

                            <LinearLayout
                                android:id="@+id/llLeadReport"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="1dp"
                                android:background="@drawable/lead_report_bg"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/lead_report"
                                            tools:ignore="UseAppTint" />

                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">
                                    <!--                                    android:background="@drawable/svg_service_assign"-->


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="Lead Report"
                                        android:textStyle="bold"
                                        android:textColor="@color/lead_report"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/myfont" />


                                </LinearLayout>



                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp">

                            <!--                            android:backgroundTint="@color/service2"-->

                            <LinearLayout
                                android:id="@+id/llServiceReport"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="1dp"
                                android:background="@drawable/service_report_bg"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/service_report"
                                            tools:ignore="UseAppTint" />

                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">
                                    <!--                                    android:background="@drawable/svg_service_assign"-->


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="Service Report"
                                        android:textStyle="bold"
                                        android:textColor="@color/service_report"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/myfont" />


                                </LinearLayout>



                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_collection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp">
                            <!--                        app:cardUseCompatPadding="true"-->
                            <!--                            android:backgroundTint="@color/service3"-->


                            <LinearLayout
                                android:id="@+id/llCollectionReport"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="1dp"
                                android:background="@drawable/collection_report_bg"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/collection_report"
                                            tools:ignore="UseAppTint" />

                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">
                                    <!--                                    android:background="@drawable/svg_service_followup"-->

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Collection Report"
                                        android:layout_marginLeft="20dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/collection_report"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/myfont" />

                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_pickup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp">
                            <!--                        app:cardUseCompatPadding="true"-->
                            <!--                            android:backgroundTint="@color/service3"-->


                            <LinearLayout
                                android:id="@+id/llPickUpReport"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="1dp"
                                android:background="@drawable/pickup_delivery_report_bg"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="80dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/pickup_delivery_report"
                                            tools:ignore="UseAppTint" />

                                    </LinearLayout>




                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">
                                    <!--                                    android:background="@drawable/svg_service_followup"-->

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pickup Delivery Report"
                                        android:layout_marginLeft="20dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/pickup_report"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/myfont" />

                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/chipNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            app:cnb_menuResource="@menu/navbottom_item"
            app:cnb_textAppearance="@style/CustomTextStyle"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>