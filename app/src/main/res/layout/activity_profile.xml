<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imback"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="left"
                        android:background="@color/color_activity_transparent"
                        android:padding="10dp"
                        android:tint="@color/greydark"
                        android:src="@drawable/back_arro"
                        tools:ignore="UseAppTint" />

                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Profile"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:tint="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/myfont"
                    android:visibility="invisible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imLeadedit"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:background="@color/color_activity_transparent"
                        android:padding="5dp"
                        android:src="@drawable/ic_edit"
                        android:visibility="invisible"
                        tools:ignore="UseAppTint" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_marginTop="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_profile"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/tv_nme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Ranjith"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:fontFamily="@font/myfont" />

                    <TextView
                        android:id="@+id/tv_DateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:visibility="visible"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/greydark"
                        android:textSize="14dp"
                        app:fontFamily="@font/myfont" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/llHeader"
                        android:orientation="vertical">




                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone">

                        </ScrollView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="45dp"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/crdv_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp"
                                    android:visibility="gone"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_marginBottom="0dp"
                                    app:cardMaxElevation="0dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ll_address"
                                        android:visibility="gone"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:padding="15dp"
                                                android:src="@drawable/ic_location"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/tv_address1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/myfont"
                                                android:text="Address"
                                                android:textAllCaps="true"
                                                android:textStyle="bold"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"/>
<!--                                            android:drawableLeft="@drawable/ic_location"-->
                                            <TextView
                                                android:id="@+id/tv_address"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/myfont"
                                                android:text="adress"
                                                android:textStyle="normal"
                                                android:textColor="@color/greydark"
                                                android:textSize="14dp" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/color_background1"/>
                                        </LinearLayout>




                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="0dp"
                                    app:cardElevation="0dp"
                                    android:id="@+id/crdv_2"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="15dp"
                                    android:visibility="gone"
                                    android:layout_marginBottom="0dp"
                                    app:cardMaxElevation="0dp">



                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ll_dob"
                                        android:visibility="gone"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:padding="15dp"
                                                android:src="@drawable/ic_cal1"/>

                                        </LinearLayout>



                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/tv_dob1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Date of Birth"
                                                android:layout_weight="0.5"
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/black"
                                                android:drawablePadding="10dp"
                                                android:textStyle="bold"
                                                android:textAllCaps="true"
                                                android:textSize="14dp"/>
<!--                                            android:drawableLeft="@drawable/ic_cal1"-->
                                            <TextView
                                                android:id="@+id/tv_dob"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text=""
                                                android:fontFamily="@font/myfont"
                                                android:textColor="@color/greydark"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal"
                                                android:textSize="14dp"/>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/color_background1"/>
                                        </LinearLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="0dp"
                                    android:id="@+id/crdv_3"
                                    android:visibility="gone"
                                    app:cardElevation="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="0dp"
                                    app:cardMaxElevation="0dp">

                                    <LinearLayout
                                        android:id="@+id/ll_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:padding="15dp"
                                                android:src="@drawable/ic_email"/>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">


                                            <TextView
                                                android:id="@+id/tv_email1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="5dp"
                                                android:layout_weight="0.5"
                                                android:paddingRight="5dp"
                                                android:fontFamily="@font/myfont"
                                                android:text="Email"
                                                android:textStyle="bold"
                                                android:textAllCaps="true"
                                                android:textColor="@color/black"
                                                android:drawablePadding="10dp"
                                                android:textSize="14dp"/>
<!--                                            android:drawableLeft="@drawable/ic_email"-->
                                            <TextView
                                                android:id="@+id/tv_email"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"

                                                android:paddingLeft="5dp"
                                                android:paddingRight="5dp"
                                                android:fontFamily="@font/myfont"
                                                android:text=""
                                                android:textStyle="normal"
                                                android:textColor="@color/greydark"
                                                android:drawablePadding="10dp"
                                                android:textSize="14dp"/>

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/color_background1"/>


                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="0dp"
                                    android:id="@+id/crdv_4"
                                    android:visibility="gone"
                                    app:cardElevation="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="0dp"
                                    app:cardMaxElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ll_mob"
                                        android:visibility="gone"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:padding="15dp"
                                                android:src="@drawable/ic_mob1"/>

                                        </LinearLayout>



                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/tv_mob1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/myfont"
                                                android:text="Mobile"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:drawablePadding="10dp"
                                                android:textStyle="bold"
                                                android:textAllCaps="true"/>
<!--                                            android:drawableLeft="@drawable/ic_mob1"-->
                                            <TextView
                                                android:id="@+id/tv_mob"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/myfont"
                                                android:text=""
                                                android:textColor="@color/greydark"
                                                android:textSize="14dp"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/color_background1"/>

                                        </LinearLayout>


                                    </LinearLayout>





                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="0dp"
                                    android:id="@+id/crdv_6"
                                    android:visibility="invisible"
                                    app:cardElevation="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="0dp"
                                    app:cardMaxElevation="0dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ll_mobb"
                                        android:visibility="gone"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="3"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:layout_width="60dp"
                                                android:layout_height="60dp"
                                                android:padding="15dp"
                                                android:src="@drawable/ic_mob1"/>

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <TextView
                                                android:id="@+id/tv_mobb"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/myfont"
                                                android:text="Mobile"
                                                android:textColor="@color/black"
                                                android:textSize="14dp"
                                                android:drawablePadding="10dp"
                                                android:textStyle="bold"
                                                android:textAllCaps="true"/>
                                            <TextView
                                                android:id="@+id/tv_mob2"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/myfont"
                                                android:text=""
                                                android:textColor="@color/greydark"
                                                android:textSize="14dp"
                                                android:drawablePadding="10dp"
                                                android:textStyle="normal" />

                                            <View
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:layout_marginTop="5dp"
                                                android:background="@color/color_background1"/>

                                        </LinearLayout>


                                    </LinearLayout>





                                </androidx.cardview.widget.CardView>


                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>












        </LinearLayout>

        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/chipNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            app:cnb_menuResource="@menu/navbottom_item"
            app:cnb_textAppearance="@style/CustomTextStyle"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>