<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:background="@drawable/loginbgmain"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/loginbg"
                android:layout_weight="1.5">
                <ImageView
                    android:id="@+id/imback"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:tint="@color/colorPrimaryExtraDark"
                    android:src="@drawable/icback"/>
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/profileicon"/>
                <TextView
                    android:id="@+id/tvdescriptn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:fontFamily="@font/myfont" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/transparentbg"
                android:layout_weight="1.5">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="8">
                        <LinearLayout
                            android:id="@+id/ll_student_details_selection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:text="   PERSONAL DETAILS"
                                android:layout_marginLeft="30dp"
                                android:textStyle="bold"
                                android:layout_marginRight="30dp"
                                app:fontFamily="@font/myfont"
                                android:textColor="@color/black"
                                android:drawableLeft="@drawable/ic_student"
                                android:drawableRight="@drawable/ic_arrow_right"
                                android:gravity="center_vertical"/>
                            <LinearLayout
                                android:id="@+id/ll_students_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:visibility="visible"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Address"
                                        android:drawablePadding="10dp"
                                        android:drawableLeft="@drawable/addresics"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:gravity="center_vertical"
                                        android:layout_weight="1" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=":"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:layout_weight="1.7" />
                                    <TextView
                                        android:id="@+id/tv_address"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:layout_weight="0.8" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Gender"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:drawablePadding="10dp"
                                        android:drawableLeft="@drawable/icgender"
                                        android:gravity="center_vertical"
                                        android:layout_weight="1" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=":"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:layout_weight="1.7" />
                                    <TextView
                                        android:id="@+id/tv_gender"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:layout_weight="0.8" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="DOB"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:drawablePadding="10dp"
                                        android:drawableLeft="@drawable/icbirthday"
                                        android:gravity="center_vertical"
                                        android:layout_weight="1" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=":"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:layout_weight="1.7" />
                                    <TextView
                                        android:id="@+id/tv_dob"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:layout_weight="0.8" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Email ID"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:drawablePadding="10dp"
                                        android:drawableLeft="@drawable/icemail"
                                        android:gravity="center_vertical"
                                        android:layout_weight="1" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=":"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:layout_weight="1.7" />
                                    <TextView
                                        android:id="@+id/tv_email_stu"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:layout_weight="0.8" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Mobile No"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:drawablePadding="10dp"
                                        android:drawableLeft="@drawable/smartphone"
                                        android:gravity="center_vertical"
                                        android:layout_weight="1" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text=":"
                                        android:textColor="@color/black"
                                        app:fontFamily="@font/myfont"
                                        android:gravity="center"
                                        android:layout_weight="1.7" />
                                    <TextView
                                        android:id="@+id/tv_mobNumb"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        app:fontFamily="@font/myfont"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        android:layout_weight="0.8" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/chipNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            app:cnb_menuResource="@menu/navbottom_item"
            app:cnb_textAppearance="@style/CustomTextStyle" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>