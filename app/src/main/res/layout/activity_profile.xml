<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imback"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="@color/color_activity_transparent"
                    android:padding="10dp"
                    android:tint="@color/black"
                    android:src="@drawable/icback"
                    tools:ignore="UseAppTint" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Profile"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:tint="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/myfont" />
            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:id="@+id/tv_nme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dp"
                app:fontFamily="@font/myfont" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llHeader"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/crdv_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="2dp"
                                android:visibility="gone"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="0dp"
                                app:cardMaxElevation="1dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ll_address"
                                    android:visibility="gone"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/tv_address1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:padding="5dp"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/myfont"
                                            android:text="Address           :"
                                            android:textStyle="bold"
                                            android:textColor="@color/greydarks"
                                            android:drawableLeft="@drawable/ic_location"
                                            android:drawablePadding="10dp"
                                            android:textSize="16dp"/>
                                        <TextView
                                            android:id="@+id/tv_address"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:padding="5dp"
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/myfont"
                                            android:text=""
                                            android:textStyle="bold"
                                            android:textColor="@color/greydarks"
                                            android:textSize="16dp"/>
                                    </LinearLayout>




                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                app:cardElevation="2dp"
                                android:id="@+id/crdv_2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="20dp"
                                android:visibility="gone"
                                android:layout_marginBottom="0dp"
                                app:cardMaxElevation="1dp">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ll_dob"
                                    android:visibility="gone"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/tv_dob1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:padding="5dp"
                                            android:text="Date of Birth   : "
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawableLeft="@drawable/ic_cal1"
                                            android:drawablePadding="10dp"
                                            android:textStyle="bold"
                                            android:textSize="16dp"/>
                                        <TextView
                                            android:id="@+id/tv_dob"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:padding="5dp"
                                            android:text=""
                                            android:layout_weight="0.5"
                                            android:fontFamily="@font/myfont"
                                            android:textColor="@color/greydarks"
                                            android:drawablePadding="10dp"
                                            android:textStyle="bold"
                                            android:textSize="16dp"/>
                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                android:id="@+id/crdv_3"
                                android:visibility="gone"
                                app:cardElevation="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="0dp"
                                app:cardMaxElevation="1dp">

                                <LinearLayout
                                    android:id="@+id/ll_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_email1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:paddingTop="5dp"
                                        android:paddingLeft="5dp"
                                        android:layout_weight="0.5"
                                        android:paddingRight="5dp"
                                        android:fontFamily="@font/myfont"
                                        android:text="Email                :"
                                        android:textStyle="bold"
                                        android:textColor="@color/greydarks"
                                        android:drawableLeft="@drawable/ic_email"
                                        android:drawablePadding="10dp"
                                        android:textSize="16dp"/>
                                    <TextView
                                        android:id="@+id/tv_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="0.5"
                                        android:paddingTop="5dp"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:fontFamily="@font/myfont"
                                        android:text=""
                                        android:textStyle="bold"
                                        android:textColor="@color/greydarks"
                                        android:drawablePadding="10dp"
                                        android:textSize="16dp"/>


                                </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                android:id="@+id/crdv_4"
                                android:visibility="gone"
                                app:cardElevation="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="0dp"
                                app:cardMaxElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ll_mob"
                                    android:visibility="gone"
                                    android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tv_mob1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:fontFamily="@font/myfont"
                                        android:padding="5dp"
                                        android:text="Mobile              :"
                                        android:layout_weight="0.5"
                                        android:textColor="@color/greydarks"
                                        android:textSize="16dp"
                                        android:drawableLeft="@drawable/ic_mob1"
                                        android:drawablePadding="10dp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:id="@+id/tv_mob"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:fontFamily="@font/myfont"
                                        android:padding="5dp"
                                        android:text=""
                                        android:layout_weight="0.5"
                                        android:textColor="@color/greydarks"
                                        android:textSize="16dp"
                                        android:drawablePadding="10dp"
                                        android:textStyle="bold" />
                                </LinearLayout>


                                </LinearLayout>





                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="0dp"
                                android:id="@+id/crdv_6"
                                android:visibility="invisible"
                                app:cardElevation="2dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="0dp"
                                app:cardMaxElevation="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ll_mobb"
                                    android:visibility="gone"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:id="@+id/tv_mobb"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="@font/myfont"
                                            android:padding="5dp"
                                            android:text="Mobile              :"
                                            android:layout_weight="0.5"
                                            android:textColor="@color/greydarks"
                                            android:textSize="16dp"
                                            android:drawableLeft="@drawable/ic_mob1"
                                            android:drawablePadding="10dp"
                                            android:textStyle="bold" />
                                        <TextView
                                            android:id="@+id/tv_mob2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="@font/myfont"
                                            android:padding="5dp"
                                            android:text=""
                                            android:layout_weight="0.5"
                                            android:textColor="@color/greydarks"
                                            android:textSize="16dp"
                                            android:drawablePadding="10dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>


                                </LinearLayout>





                            </androidx.cardview.widget.CardView>


                        </LinearLayout>









                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/chipNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            app:cnb_menuResource="@menu/navbottom_item"
            app:cnb_textAppearance="@style/CustomTextStyle" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>