<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/ll_projectList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_leadNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/colorPrimarylite"
                android:orientation="vertical">





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_leadno"
                        android:fontFamily="@font/myfont"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_SiteVisitID"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="12dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:background="@drawable/btn_bgcolouryellow"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_VisitDate"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/address_svglist"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/greydark"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <!--                android:drawableLeft="@drawable/addressicon"-->

                <TextView
                    android:id="@+id/tv_VisitTime"
                    android:fontFamily="@font/myfont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="12dp"
                    android:drawableLeft="@drawable/mobile_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_Note1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableLeft="@drawable/product_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/myfont"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:visibility="visible"/>

                <!--                android:drawableLeft="@drawable/trolley"-->

                <TextView
                    android:id="@+id/tv_Note2"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/calendar_svglist"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>
                <!--                android:drawableLeft="@drawable/deadline"-->

                <TextView
                    android:id="@+id/tv_CusNote"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/svg_action_type"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_ExpenseAmount"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left|center"
                    android:textSize="10dp"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@drawable/svg_action_type"
                    android:drawableTint="@color/greydark"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black"/>
                <!--                android:drawableLeft="@drawable/deadline"-->


                <TextView
                    android:id="@+id/tv_Remarks"
                    android:fontFamily="@font/myfont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:textSize="10dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"/>




            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>