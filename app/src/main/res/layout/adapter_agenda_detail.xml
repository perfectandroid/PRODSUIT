<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="3dp"
    android:backgroundTint="@color/white"
    android:layout_margin="2dp"
    app:cardElevation="3dp"
    tools:ignore="MissingConstraints">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_Call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Call With"
                    android:textColor="@color/green1"
                    android:textSize="10dp"
                    android:textStyle="normal" />
<!--                android:background="@drawable/rounded_shape"-->

                <TextView
                    android:id="@+id/tvCall_TrnsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="04-05-2022"
                    android:textColor="@color/greydark"
                    android:textSize="10dp"
                    android:textStyle="normal" />
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCall_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ranjith"
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="987654321"
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imcall"
                        android:fontFamily="@font/myfont"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/call_icon"
                        android:tint="@color/green"
                        android:gravity="center"
                        tools:ignore="UseAppTint" />


                </LinearLayout>
                
                
            </LinearLayout>




          



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/myfont"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Message With"
                    android:textColor="@color/green1"
                    android:textSize="10dp"
                    android:textStyle="normal" />
                <!--                android:background="@drawable/rounded_shape"-->

                <TextView
                    android:id="@+id/tvMessage_TrnsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="04-05-2022"
                    android:textColor="@color/greydark"
                    android:textSize="10dp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvMessage_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ranjith"
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="987654321"
                        android:fontFamily="@font/myfont"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/greydark"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imMessage"
                        android:fontFamily="@font/myfont"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/message_icon"
                        android:gravity="center"
                        tools:ignore="UseAppTint" />


                </LinearLayout>

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/tvMeeting_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meeting"
                android:fontFamily="@font/myfont"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:drawableTint="@color/grey"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvDocument_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document"
                android:fontFamily="@font/myfont"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:drawableTint="@color/grey"
                android:textStyle="normal" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Quotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvQuotation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quotation"
                android:fontFamily="@font/myfont"
                android:singleLine="true"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:drawableTint="@color/grey"
                android:textStyle="normal" />


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>