                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/etxt_name"
                            android:hint="Name"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:layout_gravity="center"
