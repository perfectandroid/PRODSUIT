                            app:srcCompat="@drawable/add_activities" />

                        <TextView
                            android:id="@+id/txtAddNote"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_above="@+id/fab"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/fabAddActivities"
                            android:background="@color/tabbgColor"
                            android:fontFamily="@font/myfont"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Add Note"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabAddNote"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_above="@+id/fab"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="end"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                            android:backgroundTint="@color/white"
                            android:tint="@color/black"
                            app:fabCustomSize="50dp"
                            app:srcCompat="@drawable/add_notes" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="end"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:tint="@color/white"
                            app:fabCustomSize="50dp"
                            app:rippleColor="@color/white"
                            app:srcCompat="@drawable/ic_adding" />
                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>
        <com.ismaeldivita.chipnavigation.ChipNavigationBar
            android:id="@+id/chipNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            app:cnb_menuResource="@menu/navbottom_item"
            app:cnb_textAppearance="@style/CustomTextStyle"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


