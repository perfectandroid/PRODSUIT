<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="-20dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/top_rounded_white">




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:background="@color/color_tab"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/myfont"
                        android:gravity="center"
                        android:text="edit assign"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:tint="@color/white" />

                </RelativeLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:padding="10dp"
                        android:background="@drawable/shape_service_list"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="14dp"
                            android:paddingLeft="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/myfont"
                            android:text="Ticket Information"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/greydarks"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp"
                                    android:paddingLeft="4dp"
                                    android:fontFamily="@font/myfont"
                                    android:text="Ticket"
                                    android:textColor="@color/greydarks"
                                    android:layout_centerVertical="true" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:padding="2dp"
                                        android:src="@drawable/icon_svg_ticketno"
                                        app:tint="@color/colorPrimary" />

                                    <TextView
                                        android:id="@+id/tv_Ticket"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="14dp"
                                        android:paddingLeft="2dp"
                                        android:fontFamily="@font/myfont"
                                        android:text="GGG"
                                        android:textStyle="normal"
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true" />


                                </LinearLayout>



                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_background1"
                                    android:visibility="gone"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="12dp"
                                        android:paddingLeft="4dp"
                                        android:fontFamily="@font/myfont"
                                        android:text="Customer"
                                        android:textColor="@color/greydarks"
                                        android:layout_centerVertical="true" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:padding="2dp"
                                            android:src="@drawable/icon_svg_fromdate"
                                            app:tint="@color/colorPrimary" />


                                        <TextView
                                            android:id="@+id/tv_Customer"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:textSize="14dp"
                                            android:paddingLeft="2dp"
                                            android:fontFamily="@font/myfont"
                                            android:text="hffh"
                                            android:textStyle="normal"
                                            android:textColor="@color/black"
                                            android:layout_centerVertical="true" />

                                    </LinearLayout>

                                </LinearLayout>


                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="1dp"
                                    android:background="@color/color_background1"
                                    android:visibility="gone"/>


                            </LinearLayout>


                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="14dp"
                            android:paddingLeft="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/myfont"
                            android:text="Product Details"
                            android:layout_marginBottom="5dp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:textColor="@color/greydarks"
                            android:layout_centerVertical="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="12dp"
                                        android:paddingLeft="4dp"
                                        android:fontFamily="@font/myfont"
                                        android:text="Name"
                                        android:textColor="@color/greydarks"
                                        android:layout_centerVertical="true" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:padding="2dp"
                                            android:src="@drawable/icon_svg_customer"
                                            app:tint="@color/colorPrimary" />


                                        <TextView
                                            android:id="@+id/tv_Name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical"
                                            android:textSize="14dp"
                                            android:paddingLeft="2dp"
                                            android:fontFamily="@font/myfont"
                                            android:text="hffh"
                                            android:textStyle="normal"
                                            android:textColor="@color/black"
                                            android:layout_centerVertical="true" />

                                    </LinearLayout>

                                </LinearLayout>


                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="1dp"
                                    android:background="@color/color_background1"
                                    android:visibility="gone"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:textSize="12dp"
                                    android:paddingLeft="4dp"
                                    android:fontFamily="@font/myfont"
                                    android:text="Complaint"
                                    android:textColor="@color/greydarks"
                                    android:layout_centerVertical="true" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:padding="2dp"
                                        android:src="@drawable/icon_svg_complaint"
                                        app:tint="@color/colorPrimary" />

                                    <TextView
                                        android:id="@+id/tv_Complaint"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:textSize="14dp"
                                        android:paddingLeft="2dp"
                                        android:fontFamily="@font/myfont"
                                        android:text="GGG"
                                        android:textStyle="normal"
                                        android:textColor="@color/black"
                                        android:layout_centerVertical="true" />


                                </LinearLayout>



                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/color_background1"
                                    android:visibility="gone"/>


                            </LinearLayout>


                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_Status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint=" Status  "
                            android:layout_marginTop="10dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:endIconMode="custom"
                            app:startIconDrawable="@drawable/icon_svg_status"
                            app:startIconTint="@color/colorPrimaryDark"
                            app:endIconDrawable="@drawable/arrow_down"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_Status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:drawableLeft="@drawable/svg_report"
                                android:backgroundTint="@color/greydark"
                                android:textSize="14dp"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:drawablePadding="-10dp"
                                android:singleLine="true"
                                android:textStyle="normal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_AttendedBy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Attended By"
                            android:layout_marginTop="5dp"
                            android:drawableTint="@color/textColor"
                            android:fontFamily="@font/myfont"
                            app:endIconMode="custom"
                            app:startIconDrawable="@drawable/icon_svg_attendedby"
                            app:startIconTint="@color/colorPrimaryDark"
                            app:endIconDrawable="@drawable/arrow_down"
                            style="@style/Widget.App.TextInputLayout">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tie_AttendedBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:drawableLeft="@drawable/svg_report"
                                android:backgroundTint="@color/greydark"
                                android:textSize="14dp"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:drawableTint="@color/textColor"
                                android:fontFamily="@font/myfont"
                                android:textColor="@color/greydarks"
                                android:drawablePadding="-10dp"
                                android:singleLine="true"
                                android:textStyle="normal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>










                    <LinearLayout
                        android:id="@+id/ll_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtReset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/greydark"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/btn_shape_reset"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textAllCaps="false"
                            android:text="RESET" />


                        <TextView
                            android:id="@+id/txtUpdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/myfont"
                            android:background="@drawable/btn_shape_submit"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textAllCaps="false"
                            android:text="UPDATE" />


                    </LinearLayout>




                </LinearLayout>
            </ScrollView>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>