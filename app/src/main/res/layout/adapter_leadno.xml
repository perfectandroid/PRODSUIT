<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llleadNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:maxLines="2"
            android:fontFamily="@font/myfont"
            android:background="@color/list_si"
            android:text="14"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/txtsino" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/list_data"
            android:textSize="16dp"
            android:maxLines="2"
            android:paddingStart="5dp"
            android:fontFamily="@font/myfont"
            android:text=""
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/txtLeadNo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_data"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/list_data"
                android:textSize="15dp"
                android:maxLines="2"
                android:paddingStart="5dp"
                android:fontFamily="@font/myfont"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/txtLeadDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingRight="10dp"
                android:background="@color/list_data"
                android:textSize="15dp"
                android:maxLines="2"
                android:paddingStart="5dp"
                android:fontFamily="@font/myfont"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/black" />

        </LinearLayout>


        <!--        android:drawableRight="@drawable/arrowright"-->
    </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>

    <LinearLayout
        android:id="@+id/lldepartment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtsino1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:drawableTint="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtDepartment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sree"
            android:fontFamily="@font/myfont"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:drawableTint="@color/grey"
            android:drawableRight="@drawable/ic_arrow_right"
            android:textStyle="normal" />



    </LinearLayout>

</androidx.cardview.widget.CardView>