<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:backgroundTint="@color/white"
    android:layout_marginTop="0dp"
    app:cardElevation="0dp">
    <!--    app:cardUseCompatPadding="true"-->

    <LinearLayout
        android:id="@+id/llAssignedTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:maxLines="2"
            android:fontFamily="@font/myfont"
            android:background="@color/list_si"
            android:text="14"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:id="@+id/txtsino" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/list_data"
                android:textSize="15dp"
                android:maxLines="1"
                android:fontFamily="@font/myfont"
                android:text="tretertyer"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:id="@+id/txtName" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_data"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/list_data"
                    android:textSize="15dp"
                    android:layout_marginTop="-3dp"
                    android:maxLines="1"
                    android:layout_weight="1.7"
                    android:fontFamily="@font/myfont"
                    android:text="Department"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/list_data"
                    android:textSize="15dp"
                    android:layout_marginTop="-3dp"
                    android:maxLines="1"
                    android:fontFamily="@font/myfont"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:layout_centerVertical="true" />


                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/list_data"
                    android:textSize="15dp"
                    android:layout_marginTop="-3dp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:id="@+id/txtDepartment" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_data"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/list_data"
                    android:textSize="15dp"
                    android:layout_marginTop="-3dp"
                    android:maxLines="1"
                    android:layout_weight="1.7"
                    android:fontFamily="@font/myfont"
                    android:text="Designation"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/list_data"
                    android:textSize="15dp"
                    android:layout_marginTop="-3dp"
                    android:maxLines="1"
                    android:fontFamily="@font/myfont"
                    android:text=" : "
                    android:textColor="@color/black"
                    android:layout_centerVertical="true" />


                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/list_data"
                    android:textSize="15dp"
                    android:layout_marginTop="-3dp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:fontFamily="@font/myfont"
                    android:text=""
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:id="@+id/txtDesignationName" />


            </LinearLayout>




        </LinearLayout>


        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:maxLines="2"
            android:drawableRight="@drawable/svg_right_arrow"
            android:fontFamily="@font/myfont"
            android:background="@color/list_data"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingRight="5dp"
            android:layout_centerVertical="true" />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"/>



</androidx.cardview.widget.CardView>