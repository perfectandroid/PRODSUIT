<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logoutsuccess"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:text="Do you want to go online ?"
            android:layout_marginTop="10dp"
            android:textColor="@color/greydark"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="normal"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_online_Yes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:padding="2dp"
                android:layout_weight="2"
                android:textAllCaps="false"
                android:fontFamily="@font/myfont"
                android:background="@drawable/btn_bggrey"
                android:text="Yes" />
            <Button
                android:id="@+id/btn_online_No"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/myfont"
                android:background="@drawable/btn_bgcolour"
                android:padding="2dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="No, cancel please." />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>