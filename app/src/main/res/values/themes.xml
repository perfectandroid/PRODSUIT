<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PRODSUIT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PRODSUIT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PRODSUIT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PRODSUIT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Progress" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/color_activity_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/color_activity_transparent</item>
        <item name="android:bottomDark">@color/color_activity_transparent</item>
        <item name="android:bottomMedium">@color/color_activity_transparent</item>
        <item name="android:centerBright">@color/color_activity_transparent</item>
        <item name="android:centerDark">@color/color_activity_transparent</item>
        <item name="android:centerMedium">@color/color_activity_transparent</item>
        <item name="android:fullBright">@color/color_activity_transparent</item>
        <item name="android:fullDark">@color/color_activity_transparent</item>
        <item name="android:topBright">@color/color_activity_transparent</item>
        <item name="android:topDark">@color/color_activity_transparent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/TextFloatingLabelApperarance</item>
    </style>


    <style name="TextFloatingLabelApperarance" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>