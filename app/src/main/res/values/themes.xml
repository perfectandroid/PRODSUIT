        <item name="android:centerMedium">@color/color_activity_transparent</item>
        <item name="android:fullBright">@color/color_activity_transparent</item>
        <item name="android:fullDark">@color/color_activity_transparent</item>
        <item name="android:topBright">@color/color_activity_transparent</item>
        <item name="android:topDark">@color/color_activity_transparent</item>
    </style>

