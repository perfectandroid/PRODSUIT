<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PRODSUIT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextAppearance">@style/TextFloatingLabelApperarance</item>
    </style>

    <style name="TextFloatingLabelApperarance" parent="TextAppearance.Design.Hint">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>